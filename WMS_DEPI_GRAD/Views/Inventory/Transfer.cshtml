@model WMS.BLL.DTOs.InventoryDetailsDto

@{
    ViewBag.Title = "Transfer Inventory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0">Transfer Inventory</h1>
            <p class="text-muted small mb-0">Move stock from one bin to another</p>
        </div>
        <a href="@Url.Action("Details", new { id = Model.Id })" class="btn btn-outline-secondary">
            <i class="fa-solid fa-arrow-left"></i> Cancel
        </a>
    </div>

    <div class="row">
        <div class="col-md-8 mx-auto">
            <!-- Source Inventory Card -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fa-solid fa-box-open"></i> Source Inventory</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p class="mb-2"><strong>Product:</strong> @Model.ProductName</p>
                            <p class="mb-2"><strong>SKU:</strong> <span class="badge bg-secondary font-monospace">@Model.SKU</span></p>
                        </div>
                        <div class="col-md-6">
                            <p class="mb-2"><strong>Current Bin:</strong> <span class="badge bg-info">@Model.BinCode</span></p>
                            <p class="mb-2"><strong>Available Quantity:</strong> <strong class="text-success fs-5">@Model.Quantity</strong></p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Transfer Form -->
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fa-solid fa-arrows-turn-right"></i> Transfer Details</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Transfer" method="post" id="transferForm">
                        <input type="hidden" name="InventoryId" value="@Model.Id" />
                        
                        <div class="mb-3">
                            <label class="form-label">Destination Bin <span class="text-danger">*</span></label>
                            <select name="DestinationBinId" class="form-select" required>
                                <option value="">-- Select Destination Bin --</option>
                                @* TODO: Populate bins from ViewBag or separate action *@
                                <option value="1">BIN-A-001</option>
                                <option value="2">BIN-A-002</option>
                                <option value="3">BIN-B-001</option>
                            </select>
                            <div class="form-text">Select the bin where you want to transfer the inventory</div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Quantity to Transfer <span class="text-danger">*</span></label>
                            <input type="number" name="Quantity" class="form-control" 
                                   min="1" max="@Model.Quantity" required 
                                   placeholder="Enter quantity" />
                            <div class="form-text">Maximum available: <strong>@Model.Quantity</strong> units</div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label">Reason for Transfer <span class="text-danger">*</span></label>
                            <textarea name="Reason" class="form-control" rows="3" required 
                                      placeholder="Enter reason for transferring this inventory..."></textarea>
                            <div class="form-text">Provide a brief explanation for this transfer</div>
                        </div>

                        <div class="alert alert-warning">
                            <i class="fa-solid fa-triangle-exclamation"></i>
                            <strong>Note:</strong> This action will immediately move the specified quantity from <strong>@Model.BinCode</strong> to the destination bin.
                        </div>

                        <div class="d-flex gap-2 justify-content-end">
                            <a href="@Url.Action("Details", new { id = Model.Id })" class="btn btn-outline-secondary">
                                <i class="fa-solid fa-xmark"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#confirmModal">
                                <i class="fa-solid fa-check"></i> Confirm Transfer
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('transferForm').addEventListener('submit', function(e) {
            const quantity = parseInt(document.querySelector('input[name="Quantity"]').value);
            const maxQuantity = parseInt(@Model.Quantity);
            
            if (quantity > maxQuantity) {
                e.preventDefault();
                alert(`Transfer quantity cannot exceed available quantity (${maxQuantity})`);
                return false;
            }
            
            const destinationBin = document.querySelector('select[name="DestinationBinId"]').value;
            if (!destinationBin) {
                e.preventDefault();
                alert('Please select a destination bin');
                return false;
            }
            
            return confirm(`Are you sure you want to transfer ${quantity} units to the selected bin?`);
        });
    </script>
}
