@model WMS_DEPI_GRAD.ViewModels.ProfileViewModel
@{
    ViewData["Title"] = "Edit Profile";
}

<div class="container py-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">
                <i class="bi bi-person-gear me-2"></i>Edit Profile
            </h3>
        </div>
        <div class="card-body p-4">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <h5 class="text-primary mb-3">
                    <i class="bi bi-image me-2"></i>Profile Picture
                </h5>
                <div class="row g-3 mb-4">
                    <div class="col-md-12">
                        @if (!string.IsNullOrEmpty(Model.ProfilePicturePath))
                        {
                            <div class="mb-3">
                                <label class="form-label">Current Picture</label>
                                <div>
                                    <img src="@Model.ProfilePicturePath" alt="Current Profile Picture" class="rounded-circle" style="width: 100px; height: 100px; object-fit: cover; border: 3px solid #dee2e6;" />
                                </div>
                            </div>
                        }
                        <div>
                            <label asp-for="ProfilePicture" class="form-label"></label>
                            <input asp-for="ProfilePicture" type="file" class="form-control" accept="image/*" />
                            <span asp-validation-for="ProfilePicture" class="text-danger"></span>
                            <small class="text-muted">Max file size: 5MB. Allowed formats: JPG, PNG, GIF</small>
                        </div>
                    </div>
                </div>

                <h5 class="text-primary mb-3">
                    <i class="bi bi-person me-2"></i>Personal Information
                </h5>
                <div class="row g-3 mb-4">
                    <div class="col-md-6">
                        <label asp-for="FirstName" class="form-label"></label>
                        <input asp-for="FirstName" class="form-control" placeholder="Enter First Name" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="LastName" class="form-label"></label>
                        <input asp-for="LastName" class="form-control" placeholder="Enter Last Name" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>

                <h5 class="text-primary mb-3">
                    <i class="bi bi-envelope me-2"></i>Contact Information
                </h5>
                <div class="row g-3 mb-4">
                    <div class="col-md-6">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" placeholder="Enter Email" readonly />
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <small class="text-muted">Email cannot be changed from this page</small>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="PhoneNumber" class="form-label"></label>
                        <input asp-for="PhoneNumber" class="form-control" placeholder="Enter Phone Number" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="UserName" class="form-label"></label>
                        <input asp-for="UserName" class="form-control" placeholder="Enter Username" readonly />
                        <small class="text-muted">Username cannot be changed</small>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Phone" class="form-label"></label>
                        <input asp-for="Phone" class="form-control" placeholder="Enter Contact Phone" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                </div>

                <h5 class="text-primary mb-3">
                    <i class="bi bi-geo-alt me-2"></i>Address Information
                </h5>
                <div class="row g-3 mb-4">
                    <div class="col-md-12">
                        <label asp-for="AddressStreet" class="form-label"></label>
                        <input asp-for="AddressStreet" class="form-control" placeholder="Enter Street Address" />
                        <span asp-validation-for="AddressStreet" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="AddressCity" class="form-label"></label>
                        <input asp-for="AddressCity" class="form-control" placeholder="Enter City" />
                        <span asp-validation-for="AddressCity" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="AddressState" class="form-label"></label>
                        <input asp-for="AddressState" class="form-control" placeholder="Enter State/Province" />
                        <span asp-validation-for="AddressState" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="AddressPostalCode" class="form-label"></label>
                        <input asp-for="AddressPostalCode" class="form-control" placeholder="Enter Postal Code" />
                        <span asp-validation-for="AddressPostalCode" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="AddressCountry" class="form-label"></label>
                        <input asp-for="AddressCountry" class="form-control" placeholder="Enter Country" />
                        <span asp-validation-for="AddressCountry" class="text-danger"></span>
                    </div>
                </div>

                <h5 class="text-primary mb-3">
                    <i class="bi bi-building me-2"></i>Company Information (Optional)
                </h5>
                <div class="row g-3 mb-4">
                    <div class="col-md-12">
                        <label asp-for="Company" class="form-label"></label>
                        <input asp-for="Company" class="form-control" placeholder="Enter Company Name (Optional)" />
                        <span asp-validation-for="Company" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left me-1"></i>Cancel
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save me-1"></i>Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
