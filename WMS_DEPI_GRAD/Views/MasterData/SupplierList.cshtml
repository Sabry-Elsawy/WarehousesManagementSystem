@{
    ViewData["Title"] = "Suppliers";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-primary-orange fw-bold mb-0">
                <i class="fas fa-truck-loading me-2"></i>Suppliers
            </h2>
            <p class="text-muted mb-0">Manage vendor relationships</p>
        </div>
        <a asp-action="SupplierUpsert" class="btn btn-primary rounded-pill px-4">
            <i class="fas fa-plus me-2"></i>Create New
        </a>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-uppercase text-muted small">
                        <tr>
                            <th class="ps-4 py-3">Name</th>
                            <th class="py-3">Email</th>
                            <th class="py-3">Address</th>
                            <th class="py-3 text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold text-primary-orange">@item.Name</td>
                                <td><a href="mailto:@item.Email" class="text-decoration-none">@item.Email</a></td>
                                <td>@item.Address</td>
                                <td class="text-end pe-4">
                                    <div class="btn-group">
                                        <button class="btn btn-sm btn-light text-primary-orange"><i class="fas fa-eye"></i></button>
                                        <a asp-action="SupplierUpsert" asp-route-id="@item.Id" class="btn btn-sm btn-light text-primary-orange"><i class="fas fa-edit"></i></a>
                                        <button class="btn btn-sm btn-light text-danger"><i class="fas fa-trash-alt"></i></button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
