@{
    ViewData["Title"] = "Create Warehouse";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-primary-orange fw-bold mb-0">
                <i class="fas fa-plus-circle me-2"></i>Create Warehouse
            </h2>
            <p class="text-muted mb-0">Add a new warehouse to the system</p>
        </div>
        <a asp-action="WarehouseList" class="btn btn-outline-secondary rounded-pill px-4">
            <i class="fas fa-arrow-left me-2"></i>Back to List
        </a>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-bottom py-3">
                    <h5 class="card-title mb-0 text-primary-orange">Warehouse Details</h5>
                </div>
                <div class="card-body p-4">
                    <form>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Warehouse Code <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" placeholder="e.g. WH-001" required>
                                <div class="form-text">Unique identifier for the warehouse.</div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Warehouse Name <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" placeholder="e.g. Main Distribution Center" required>
                            </div>
                            
                            <div class="col-12">
                                <hr class="my-2 text-muted opacity-25">
                                <h6 class="text-muted text-uppercase small fw-bold mb-3">Location Information</h6>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold">Country</label>
                                <select class="form-select">
                                    <option selected>Select Country...</option>
                                    <option>Egypt</option>
                                    <option>Saudi Arabia</option>
                                    <option>UAE</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">City</label>
                                <input type="text" class="form-control" placeholder="e.g. Cairo">
                            </div>
                            <div class="col-12">
                                <label class="form-label fw-bold">Street Address</label>
                                <input type="text" class="form-control" placeholder="e.g. 123 Industrial Zone, 5th Settlement">
                            </div>

                            <div class="col-12">
                                <hr class="my-2 text-muted opacity-25">
                                <h6 class="text-muted text-uppercase small fw-bold mb-3">Capacity & Configuration</h6>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold">Total Capacity (Units)</label>
                                <input type="number" class="form-control" placeholder="0">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Number of Zones</label>
                                <input type="number" class="form-control" placeholder="0" readonly>
                                <div class="form-text">Calculated automatically based on zones added.</div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end mt-5 pt-3 border-top">
                            <button type="button" class="btn btn-light me-2">Cancel</button>
                            <button type="submit" class="btn btn-primary px-4">Save Warehouse</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm bg-light mb-4">
                <div class="card-body">
                    <h6 class="fw-bold text-dark-orange"><i class="fas fa-info-circle me-2"></i>Help & Tips</h6>
                    <p class="small text-muted mb-0">
                        Ensure the Warehouse Code is unique across the system. 
                        Capacity helps in calculating utilization reports.
                    </p>
                </div>
            </div>
             <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-bottom py-3">
                    <h5 class="card-title mb-0 text-dark">Quick Stats</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span>Active Warehouses</span>
                        <span class="fw-bold">3</span>
                    </div>
                     <div class="d-flex justify-content-between mb-2">
                        <span>Total Capacity</span>
                        <span class="fw-bold">90,000</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
