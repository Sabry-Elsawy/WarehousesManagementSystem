@{
    ViewData["Title"] = "Zones";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-primary-orange fw-bold mb-0">
                <i class="fas fa-map-marker-alt me-2"></i>Zones
            </h2>
            <p class="text-muted mb-0">Manage zones within your warehouses</p>
        </div>
        <a asp-action="ZoneUpsert" class="btn btn-primary rounded-pill px-4">
            <i class="fas fa-plus me-2"></i>Create New
        </a>
    </div>

    <!-- Filters -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body p-3">
            <div class="row g-3 align-items-center">
                <div class="col-md-4">
                    <label class="small text-muted fw-bold mb-1">Filter by Warehouse</label>
                    <select class="form-select">
                        <option selected>All Warehouses</option>
                        <option>Main Distribution Center</option>
                        <option>Alexandria Hub</option>
                    </select>
                </div>
                <div class="col-md-4">
                     <label class="small text-muted fw-bold mb-1">Search</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0 text-muted">
                            <i class="fas fa-search"></i>
                        </span>
                        <input type="text" class="form-control border-start-0 ps-0" placeholder="Search zones...">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Data Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-uppercase text-muted small">
                        <tr>
                            <th class="ps-4 py-3">Name</th>
                            <th class="py-3">Warehouse</th>
                            <th class="py-3">Aisles</th>
                            <th class="py-3 text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold text-dark">@item.Name</td>
                                <td>
                                    <span class="badge bg-light text-primary-orange border border-primary-orange">
                                        <i class="fas fa-warehouse me-1"></i> @item.Warehouse
                                    </span>
                                </td>
                                <td>
                                    <span class="text-muted">12 Aisles</span>
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group">
                                        <button class="btn btn-sm btn-light text-primary-orange" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <a asp-action="ZoneUpsert" asp-route-id="@item.Id" class="btn btn-sm btn-light text-primary-orange" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button class="btn btn-sm btn-light text-danger" title="Delete">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer bg-white border-top-0 py-3">
             <nav aria-label="Page navigation">
                <ul class="pagination justify-content-end mb-0">
                    <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
                    <li class="page-item active"><a class="page-link bg-primary-orange border-primary-orange" href="#">1</a></li>
                    <li class="page-item"><a class="page-link text-primary-orange" href="#">Next</a></li>
                </ul>
            </nav>
        </div>
    </div>
</div>
