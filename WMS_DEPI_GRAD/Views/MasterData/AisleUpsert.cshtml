@{
    ViewData["Title"] = "Create Aisle";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-primary-orange fw-bold mb-0">
                <i class="fas fa-plus-circle me-2"></i>Create Aisle
            </h2>
            <p class="text-muted mb-0">Add a new aisle to a zone</p>
        </div>
        <a asp-action="AisleList" class="btn btn-outline-secondary rounded-pill px-4">
            <i class="fas fa-arrow-left me-2"></i>Back to List
        </a>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <form>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Warehouse <span class="text-danger">*</span></label>
                                <select class="form-select" required>
                                    <option selected disabled>Select Warehouse...</option>
                                    <option>Main Distribution Center</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Zone <span class="text-danger">*</span></label>
                                <select class="form-select" required>
                                    <option selected disabled>Select Zone...</option>
                                    <option>Zone A</option>
                                    <option>Zone B</option>
                                </select>
                            </div>
                            <div class="col-12">
                                <label class="form-label fw-bold">Aisle Code <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" placeholder="e.g. A-01" required>
                            </div>
                        </div>
                        <div class="d-flex justify-content-end mt-4">
                            <button type="button" class="btn btn-light me-2">Cancel</button>
                            <button type="submit" class="btn btn-primary px-4">Save Aisle</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
