@{
    ViewData["Title"] = "Warehouses";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-primary-orange fw-bold mb-0">
                <i class="fas fa-warehouse me-2"></i>Warehouses
            </h2>
            <p class="text-muted mb-0">Manage your warehouse locations and capacities</p>
        </div>
        <a asp-action="WarehouseUpsert" class="btn btn-primary rounded-pill px-4">
            <i class="fas fa-plus me-2"></i>Create New
        </a>
    </div>

    <!-- Filters & Search -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body p-3">
            <div class="row g-3">
                <div class="col-md-4">
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0 text-muted">
                            <i class="fas fa-search"></i>
                        </span>
                        <input type="text" class="form-control border-start-0 ps-0" placeholder="Search by name or code...">
                    </div>
                </div>
                <div class="col-md-3">
                    <select class="form-select">
                        <option selected>Filter by City</option>
                        <option>Cairo</option>
                        <option>Alexandria</option>
                        <option>Giza</option>
                    </select>
                </div>
                <div class="col-md-3 ms-auto text-end">
                     <button class="btn btn-outline-secondary">
                        <i class="fas fa-filter me-1"></i> More Filters
                    </button>
                    <button class="btn btn-outline-secondary ms-2">
                        <i class="fas fa-download me-1"></i> Export
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Data Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-uppercase text-muted small">
                        <tr>
                            <th class="ps-4 py-3">Code</th>
                            <th class="py-3">Name</th>
                            <th class="py-3">City</th>
                            <th class="py-3">Capacity</th>
                            <th class="py-3 text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold text-primary-orange">@item.Code</td>
                                <td>
                                    <div class="fw-bold text-dark">@item.Name</div>
                                    <small class="text-muted">Updated 2 days ago</small>
                                </td>
                                <td><span class="badge bg-light text-dark border">@item.City</span></td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="progress flex-grow-1 me-2" style="height: 6px; width: 80px;">
                                            <div class="progress-bar bg-primary-orange" role="progressbar" style="width: 75%"></div>
                                        </div>
                                        <small class="text-muted">@item.Capacity.ToString("N0")</small>
                                    </div>
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group">
                                        <button class="btn btn-sm btn-light text-primary-orange" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <a asp-action="WarehouseUpsert" asp-route-id="@item.Id" class="btn btn-sm btn-light text-primary-orange" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button class="btn btn-sm btn-light text-danger" title="Delete">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer bg-white border-top-0 py-3">
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-end mb-0">
                    <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
                    <li class="page-item active"><a class="page-link bg-primary-orange border-primary-orange" href="#">1</a></li>
                    <li class="page-item"><a class="page-link text-primary-orange" href="#">2</a></li>
                    <li class="page-item"><a class="page-link text-primary-orange" href="#">3</a></li>
                    <li class="page-item"><a class="page-link text-primary-orange" href="#">Next</a></li>
                </ul>
            </nav>
        </div>
    </div>
</div>
