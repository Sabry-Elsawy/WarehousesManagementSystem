@model IEnumerable<WMS_DEPI_GRAD.ViewModels.PickingTaskViewModel>

@{
    ViewData["Title"] = "Picking Tasks";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-list-check"></i> Picking Tasks</h2>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>SO Number</th>
                            <th>Customer</th>
                            <th>Product</th>
                            <th>SKU</th>
                            <th>Bin Location</th>
                            <th>Qty to Pick</th>
                            <th>Qty Picked</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <a asp-controller="SalesOrder" asp-action="Details" asp-route-id="@item.SalesOrderId">
                                        @item.SO_Number
                                    </a>
                                </td>
                                <td>@item.CustomerName</td>
                                <td>@item.ProductName</td>
                                <td>@item.SKU</td>
                                <td><strong>@item.BinLocation</strong></td>
                                <td>@item.QuantityToPick</td>
                                <td>@item.QuantityPicked</td>
                                <td>
                                    @if (item.Status == WMS.DAL.PickingStatus.Pending)
                                    {
                                        <span class="badge bg-warning">Pending</span>
                                    }
                                    else if (item.Status == WMS.DAL.PickingStatus.InProgress)
                                    {
                                        <span class="badge bg-info">In Progress</span>
                                    }
                                    else if (item.Status == WMS.DAL.PickingStatus.Picked)
                                    {
                                        <span class="badge bg-success">Picked</span>
                                    }
                                    else if (item.Status == WMS.DAL.PickingStatus.Cancelled)
                                    {
                                        <span class="badge bg-secondary">Cancelled</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Status == WMS.DAL.PickingStatus.Pending || item.Status == WMS.DAL.PickingStatus.InProgress)
                                    {
                                        <a asp-action="Confirm" asp-route-id="@item.Id" class="btn btn-sm btn-primary" title="Confirm Picking">
                                            <i class="bi bi-check-circle"></i> Confirm
                                        </a>
                                        <form asp-action="Cancel" asp-route-id="@item.Id" method="post" class="d-inline"
                                              onsubmit="return confirm('Are you sure you want to cancel this picking task?');">
                                            <button type="submit" class="btn btn-sm btn-danger" title="Cancel">
                                                <i class="bi bi-x-circle"></i>
                                            </button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
