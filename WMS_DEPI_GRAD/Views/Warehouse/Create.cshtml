@model WMS.DAL.Warehouse

@{
    ViewData["Title"] = "Create Warehouse";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-primary-orange fw-bold mb-0">
                <i class="fas fa-plus-circle me-2"></i>Create Warehouse
            </h2>
            <p class="text-muted mb-0">Add a new warehouse facility</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
            <i class="fas fa-arrow-left me-2"></i>Back to List
        </a>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        
                        <h5 class="text-muted text-uppercase small fw-bold mb-3">Basic Information</h5>
                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label asp-for="Code" class="form-label fw-bold">Warehouse Code <span class="text-danger">*</span></label>
                                <input asp-for="Code" class="form-control" placeholder="e.g. WH-001" />
                                <span asp-validation-for="Code" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Name" class="form-label fw-bold">Warehouse Name <span class="text-danger">*</span></label>
                                <input asp-for="Name" class="form-control" placeholder="e.g. Main Distribution Center" />
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Capacity" class="form-label fw-bold">Total Capacity</label>
                                <input asp-for="Capacity" type="number" class="form-control" placeholder="Total storage units" />
                                <span asp-validation-for="Capacity" class="text-danger small"></span>
                            </div>
                        </div>

                        <hr class="my-4 text-muted opacity-25">

                        <h5 class="text-muted text-uppercase small fw-bold mb-3">Location Details</h5>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Country" class="form-label fw-bold">Country</label>
                                <input asp-for="Country" class="form-control" placeholder="e.g. Egypt" />
                                <span asp-validation-for="Country" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="City" class="form-label fw-bold">City <span class="text-danger">*</span></label>
                                <input asp-for="City" class="form-control" placeholder="e.g. Cairo" />
                                <span asp-validation-for="City" class="text-danger small"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="Street" class="form-label fw-bold">Street Address <span class="text-danger">*</span></label>
                                <input asp-for="Street" class="form-control" placeholder="e.g. 123 Industrial Zone" />
                                <span asp-validation-for="Street" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end mt-5">
                            <a asp-action="Index" class="btn btn-light me-2">Cancel</a>
                            <button type="submit" class="btn btn-primary px-4">Save Warehouse</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <!-- Helper Sidebar -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm bg-light">
                <div class="card-body p-4">
                    <h6 class="fw-bold text-primary-orange mb-3"><i class="fas fa-info-circle me-2"></i>Help & Tips</h6>
                    <ul class="list-unstyled small text-muted mb-0">
                        <li class="mb-2"><i class="fas fa-check text-success me-2"></i><strong>Code:</strong> Must be unique across the system.</li>
                        <li class="mb-2"><i class="fas fa-check text-success me-2"></i><strong>Capacity:</strong> Defines the maximum number of pallets/units this warehouse can hold.</li>
                        <li><i class="fas fa-check text-success me-2"></i><strong>Location:</strong> Used for routing and logistics optimization.</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
