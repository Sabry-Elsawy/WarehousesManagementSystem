@model WMS.DAL.Warehouse

@{
    ViewData["Title"] = "Warehouse Details";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-primary-orange fw-bold mb-0">
                <i class="fas fa-info-circle me-2"></i>Warehouse Details
            </h2>
            <p class="text-muted mb-0">View warehouse information</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
            <i class="fas fa-arrow-left me-2"></i>Back to List
        </a>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6 class="text-muted small text-uppercase fw-bold">Code</h6>
                            <p class="fs-5 fw-bold text-primary-orange">@Model.Code</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted small text-uppercase fw-bold">Name</h6>
                            <p class="fs-5 fw-bold">@Model.Name</p>
                        </div>
                    </div>
                    
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6 class="text-muted small text-uppercase fw-bold">Capacity</h6>
                            <p class="fs-5">@Model.Capacity <span class="text-muted small">units</span></p>
                        </div>
                         <div class="col-md-6">
                            <h6 class="text-muted small text-uppercase fw-bold">Location</h6>
                            <p class="mb-0">@Model.Street</p>
                            <p class="mb-0">@Model.City, @Model.Country</p>
                        </div>
                    </div>

                    <hr class="text-muted opacity-25 my-4">

                    <div class="d-flex justify-content-end">
                        @if (User.IsInRole("Admin") || User.IsInRole("WarehouseManager"))
                        {
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary px-4">
                                <i class="fas fa-edit me-2"></i>Edit Warehouse
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
