@model IEnumerable<WMS.DAL.Warehouse>

@{
    ViewData["Title"] = "Warehouses";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-primary-orange fw-bold mb-0">
                <i class="fas fa-warehouse me-2"></i>Warehouses
            </h2>
            <p class="text-muted mb-0">Manage your warehouse locations and capacities</p>
        </div>
        @if (User.IsInRole("Admin")){
            <a asp-action="Create" class="btn btn-primary rounded-pill px-4">
                <i class="fas fa-plus me-2"></i>Create New
            </a>
        }
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Filters -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body p-3">
            <div class="row g-3 align-items-center">
                <div class="col-md-3">
                    <select class="form-select" id="cityFilter">
                        <option value="">All Cities</option>
                    </select>
                </div>
                <div class="col-md-4 ms-auto">
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0 text-muted">
                            <i class="fas fa-search"></i>
                        </span>
                        <input type="text" class="form-control border-start-0 ps-0" placeholder="Search warehouses..." id="searchInput">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Data Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0" id="warehouseTable">
                    <thead class="bg-light text-uppercase text-muted small">
                        <tr>
                            <th class="ps-4 py-3">Code</th>
                            <th class="py-3">Name</th>
                            <th class="py-3">City</th>
                            <th class="py-3">Capacity</th>
                            <th class="py-3 text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="warehouse-row" data-name="@item.Name.ToLower()" data-city="@item.City">
                                <td class="ps-4 fw-bold text-primary-orange">@item.Code</td>
                                <td class="fw-bold text-dark">@item.Name</td>
                                <td>@item.City</td>
                                <td style="width: 20%;">
                                    <div class="d-flex align-items-center">
                                        <span class="me-2 text-muted small">@item.Capacity</span>
                                        <div class="progress flex-grow-1" style="height: 6px;">
                                            <div class="progress-bar bg-success" role="progressbar" style="width: 45%"></div>
                                        </div>
                                    </div>
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-light text-primary-orange"><i class="fas fa-eye"></i></a>
                                        @if (User.IsInRole("Admin") || User.IsInRole("WarehouseManager")){
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-light text-primary-orange"><i class="fas fa-edit"></i></a>
                                        }
                                        @if (User.IsInRole("Admin")){
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-light text-danger"><i class="fas fa-trash-alt"></i></a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Populate city dropdown dynamically
        $(document).ready(function() {
            const cities = new Set();
            $('.warehouse-row').each(function() {
                const city = $(this).data('city');
                if (city) {
                    cities.add(city);
                }
            });
            
            // Sort and add to dropdown
            Array.from(cities).sort().forEach(function(city) {
                $('#cityFilter').append(`<option value="${city}">${city}</option>`);
            });

            // Filter functionality
            function filterWarehouses() {
                const searchTerm = $('#searchInput').val().toLowerCase();
                const selectedCity = $('#cityFilter').val();

                $('.warehouse-row').each(function() {
                    const warehouseName = $(this).data('name');
                    const warehouseCity = $(this).data('city');

                    const matchesSearch = !searchTerm || warehouseName.includes(searchTerm);
                    const matchesCity = !selectedCity || warehouseCity === selectedCity;

                    if (matchesSearch && matchesCity) {
                        $(this).show();
                    } else {
                        $(this).hide();
                    }
                });
            }

            // Attach event listeners
            $('#searchInput').on('keyup', filterWarehouses);
            $('#cityFilter').on('change', filterWarehouses);
        });
    </script>
}
