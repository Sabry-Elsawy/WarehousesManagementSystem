@model WMS.DAL.Warehouse

@{
    ViewData["Title"] = "Edit Warehouse";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-primary-orange fw-bold mb-0">
                <i class="fas fa-edit me-2"></i>Edit Warehouse
            </h2>
            <p class="text-muted mb-0">Update warehouse information</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
            <i class="fas fa-arrow-left me-2"></i>Back to List
        </a>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        
                        <h5 class="text-muted text-uppercase small fw-bold mb-3">Basic Information</h5>
                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label asp-for="Code" class="form-label fw-bold">Warehouse Code <span class="text-danger">*</span></label>
                                <input asp-for="Code" class="form-control" />
                                <span asp-validation-for="Code" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Name" class="form-label fw-bold">Warehouse Name <span class="text-danger">*</span></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Capacity" class="form-label fw-bold">Total Capacity</label>
                                <input asp-for="Capacity" type="number" class="form-control" />
                                <span asp-validation-for="Capacity" class="text-danger small"></span>
                            </div>
                        </div>

                        <hr class="my-4 text-muted opacity-25">

                        <h5 class="text-muted text-uppercase small fw-bold mb-3">Location Details</h5>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Country" class="form-label fw-bold">Country</label>
                                <input asp-for="Country" class="form-control" />
                                <span asp-validation-for="Country" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="City" class="form-label fw-bold">City <span class="text-danger">*</span></label>
                                <input asp-for="City" class="form-control" />
                                <span asp-validation-for="City" class="text-danger small"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="Street" class="form-label fw-bold">Street Address <span class="text-danger">*</span></label>
                                <input asp-for="Street" class="form-control" />
                                <span asp-validation-for="Street" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end mt-5">
                            <a asp-action="Index" class="btn btn-light me-2">Cancel</a>
                            <button type="submit" class="btn btn-primary px-4">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
