 @model ResetPasswordViewModel
@{
	ViewData["Title"] = "Reset Password";
	Layout = "~/Views/Shared/_AuthLayout.cshtml";
}



<div class="container py-5">
    <div class="row justify-content-center">

        <div class="col-md-6 col-lg-5">

            <h2 class="mb-3 text-primary">Reset Password</h2>
            <p class="text-muted">Please enter your new password.</p>

            <form asp-action="ResetPassword">

                <!-- New Password -->
                <div class="mb-3">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <label for="password" class="form-label">New Password</label>
                    <input asp-for="Password" type="password" id="password" class="form-control" required>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!-- Confirm Password -->
                <div class="mb-3">
                    <label for="confirm" class="form-label">Confirm Password</label>
                    <input asp-for="ConfirmPassword" type="password" id="confirm" class="form-control" required>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <button class="btn btn-warning px-4" type="submit">Reset Password</button>

            </form>

        </div>

    </div>
</div>
