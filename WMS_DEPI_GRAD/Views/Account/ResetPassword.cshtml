@model WMS_DEPI_GRAD.ViewModels.ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="container py-5 min-vh-100 d-flex align-items-start bg-light">
    <div class="row justify-content-center w-100 mt-5">
        <div class="col-md-6 col-lg-5">

            <h2 class="mb-3 text-primary-orange fw-semibold">
                Reset Password
            </h2>

            <p class="text-secondary">
                Please enter your new password.
            </p>

            <form asp-action="ResetPassword" method="post">

                <input asp-for="Email" type="hidden" />
                <input asp-for="Token" type="hidden" />

                <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                <!-- New Password -->
                <div class="mb-3">
                    <label asp-for="Password" class="form-label fw-semibold text-dark"></label>
                    <input asp-for="Password" type="password"
                           class="form-control border-secondary-subtle" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!-- Confirm Password -->
                <div class="mb-4">
                    <label asp-for="ConfirmPassword" class="form-label fw-semibold text-dark"></label>
                    <input asp-for="ConfirmPassword" type="password"
                           class="form-control border-secondary-subtle" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit"
                        class="btn btn-hero-primary rounded-pill px-4 fw-semibold">
                    Reset Password
                </button>

            </form>

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-success mt-3">
                    @ViewBag.Message
                </div>
            }

        </div>
    </div>
</div>


@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
