@model WMS_DEPI_GRAD.ViewModels.ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">

            <h2 class="mb-3 text-primary">Reset Password</h2>
            <p class="text-muted">Please enter your new password.</p>

            <form asp-action="ResetPassword" method="post">

                <!-- Hidden fields for Email and Token -->
                <input asp-for="Email" type="hidden" />
                <input asp-for="Token" type="hidden" />

                <!-- New Password -->
                <div class="mb-3">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!-- Confirm Password -->
                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label"></label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-warning px-4">Reset Password</button>

            </form>

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-success mt-3">@ViewBag.Message</div>
            }

        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
