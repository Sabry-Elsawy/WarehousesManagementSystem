@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="container my-5">
    <h1 class="text-primary-orange">Account Login</h1>
    <p class="lead">Please enter your login credentials to access your account.</p>

    <div class="row justify-content-center d-flex mt-4 g-4">

        <!-- Left Image -->
        <div class="login-image col-lg-8">
            <img src="~/images/wms-worker.jpg" alt="Warehouse Worker" class="img-fluid" />
        </div>

        <!-- Login Form -->
        <div class="login col-lg-4 align-self-center">
            <h5 class="text-primary-orange">Login</h5>

            <form asp-action="Login" asp-controller="Account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Email -->
                <div class="mb-3">
                    <label for="Email" class="form-label">Email address</label>
                    <input type="email"
                           name="Email"
                           id="Email"
                           class="form-control"
                           placeholder="Enter your email"
                           required />
                </div>

                <!-- Password -->
                <div class="mb-3">
                    <label for="Password" class="form-label">Password</label>
                    <input type="password"
                           name="Password"
                           id="Password"
                           class="form-control"
                           placeholder="Enter your password"
                           required />
                </div>

                <!-- Forgot + Register -->
                <div class="mb-3 forgot-password">
                    <a asp-controller="Account" asp-action="ForgotPassword" class="text-primary-orange">Forgot Password?</a>
                </div>

                <div class="mb-3 forgot-password">
                    <a asp-controller="Account" asp-action="Register" class="text-primary-orange">Create a new account</a>
                </div>

                <!-- Submit -->
                <button type="submit" class="btn btn-hero-primary w-100">Login</button>

            </form>
        </div>

    </div>
</div>
