@model WMS_DEPI_GRAD.ViewModels.PutawayCircle.PutawayDetailsViewModel

<div class="container-fluid mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Putaway Details #@Model.PutawayId</h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    <!-- Status and Timestamps Card -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Putaway Information</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="fw-bold">Status:</label>
                        @if (Model.Status == WMS.DAL.PutawayStatus.Pending)
                        {
                            <span class="badge bg-warning text-dark ms-2 fs-6">Pending</span>
                        }
                        else if (Model.Status == WMS.DAL.PutawayStatus.Assigned)
                        {
                            <span class="badge bg-primary ms-2 fs-6">Assigned</span>
                        }
                        else if (Model.Status == WMS.DAL.PutawayStatus.InProgress)
                        {
                            <span class="badge bg-info ms-2 fs-6">In Progress</span>
                        }
                        else if (Model.Status == WMS.DAL.PutawayStatus.Completed)
                        {
                            <span class="badge bg-success ms-2 fs-6">Completed</span>
                        }
                        else if (Model.Status == WMS.DAL.PutawayStatus.Closed)
                        {
                            <span class="badge bg-secondary ms-2 fs-6">Closed</span>
                        }
                    </div>
                    <div class="mb-2"><strong>Quantity:</strong> @Model.Qty units</div>
                    <div class="mb-2"><strong>Created:</strong> @Model.CreatedOn.ToString("dd MMM yyyy HH:mm") @(Model.CreatedBy != null ? $"by {Model.CreatedBy}" : "")</div>
                    @if (Model.AssignedOn.HasValue)
                    {
                        <div class="mb-2"><strong>Assigned:</strong> @Model.AssignedOn.Value.ToString("dd MMM yyyy HH:mm")</div>
                    }
                    @if (Model.CompletedOn.HasValue)
                    {
                        <div class="mb-2"><strong>Completed:</strong> @Model.CompletedOn.Value.ToString("dd MMM yyyy HH:mm") @(Model.PerformedBy != null ? $"by {Model.PerformedBy}" : "")</div>
                    }
                    @if (Model.ClosedOn.HasValue)
                    {
                        <div class="mb-2"><strong>Closed:</strong> @Model.ClosedOn.Value.ToString("dd MMM yyyy HH:mm") @(Model.ClosedBy != null ? $"by {Model.ClosedBy}" : "")</div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-box-seam"></i> Product Information</h5>
                </div>
                <div class="card-body">
                    <div class="mb-2"><strong>SKU:</strong> @Model.SKU</div>
                    <div class="mb-2"><strong>Product:</strong> @Model.ProductName</div>
                    @if (!string.IsNullOrEmpty(Model.BatchNumber))
                    {
                        <div class="mb-2"><strong>Batch/Lot:</strong> @Model.BatchNumber</div>
                    }
                    @if (!string.IsNullOrEmpty(Model.ExpiryDate))
                    {
                        <div class="mb-2"><strong>Expiry Date:</strong> @Model.ExpiryDate</div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Assigned Bins Card -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0"><i class="bi bi-basket"></i> Assigned Bins</h5>
        </div>
        <div class="card-body p-0">
            @if (Model.AssignedBins == null || !Model.AssignedBins.Any())
            {
                <div class="p-4 text-center text-muted">
                    No bins assigned yet.
                </div>
            }
            else
            {
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Bin Code</th>
                            <th>Zone</th>
                            <th>Assigned Qty</th>
                            <th>Available Capacity</th>
                            <th>Utilization</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var bin in Model.AssignedBins)
                        {
                            var totalCapacity = bin.AvailableCapacity + bin.AssignedQty;
                            var utilizationPercent = totalCapacity > 0 ? (bin.AssignedQty * 100.0 / totalCapacity) : 0;
                            <tr>
                                <td><strong>@bin.BinCode</strong></td>
                                <td>@bin.Zone</td>
                                <td>@bin.AssignedQty</td>
                                <td>@bin.AvailableCapacity</td>
                                <td>
                                    <div class="progress" style="height: 20px;">
                                        <div class="progress-bar" role="progressbar" 
                                             style="width: @(utilizationPercent)%;" 
                                             aria-valuenow="@utilizationPercent" aria-valuemin="0" aria-valuemax="100">
                                            @utilizationPercent.ToString("F0")%
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="card shadow-sm">
        <div class="card-body text-center">
            @if (Model.Status == WMS.DAL.PutawayStatus.Pending)
            {
                <a asp-action="AutoAssign" asp-route-id="@Model.PutawayId" class="btn btn-primary btn-lg me-2">
                    <i class="bi bi-cpu"></i> Auto-Assign Bins
                </a>
                <a asp-action="AssignManual" asp-route-id="@Model.PutawayId" class="btn btn-secondary btn-lg">
                    <i class="bi bi-hand-index"></i> Manual Assignment
                </a>
            }
            else if (Model.Status == WMS.DAL.PutawayStatus.Assigned)
            {
                @if(User.IsInRole("Admin")){
                    <a asp-action="Execute" asp-route-id="@Model.PutawayId" class="btn btn-success btn-lg me-2">
                        <i class="bi bi-check-circle"></i> Execute Putaway
                    </a>
                }
                <a asp-action="AssignManual" asp-route-id="@Model.PutawayId" class="btn btn-warning btn-lg">
                    <i class="bi bi-pencil"></i> Edit Assignment
                </a>
            }
            else if (Model.Status == WMS.DAL.PutawayStatus.Completed && User.IsInRole("Admin"))
            {
                <form asp-action="Close" asp-route-id="@Model.PutawayId" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-secondary btn-lg" 
                            onclick="return confirm('Are you sure you want to close this putaway task?')">
                        <i class="bi bi-lock"></i> Close Putaway
                    </button>
                </form>
            }
            else if (Model.Status == WMS.DAL.PutawayStatus.Closed)
            {
                <div class="alert alert-success" role="alert">
                    <i class="bi bi-check-circle-fill"></i> This putaway task is closed and complete.
                </div>
            }
        </div>
    </div>

</div>
