@model WMS_DEPI_GRAD.ViewModels.PutawayCircle.PutawayIndexViewModel

<div class="container-fluid mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Putaway Tasks</h2>

        <div>
            <a asp-action="Create" class="btn btn-success me-2">
                <i class="bi bi-plus-circle"></i> Create New Putaway
            </a>
            <a asp-controller="Inventory" asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Inventory
            </a>
        </div>
    </div>

    <!-- Search and Filter Card -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-5">
                    <input type="text" name="search" class="form-control" 
                           placeholder="Search SKU or Product Name..." 
                           value="@Model.SearchTerm" />
                </div>
                <div class="col-md-3">
                    <select name="status" class="form-select">
                        <option value="">All Statuses</option>
                        <option value="Pending" selected="@(Model.StatusFilter == "Pending")">Pending</option>
                        <option value="Assigned" selected="@(Model.StatusFilter == "Assigned")">Assigned</option>
                        <option value="InProgress" selected="@(Model.StatusFilter == "InProgress")">In Progress</option>
                        <option value="Completed" selected="@(Model.StatusFilter == "Completed")">Completed</option>
                        <option value="Closed" selected="@(Model.StatusFilter == "Closed")">Closed</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button class="btn btn-primary w-100" type="submit">
                        <i class="bi bi-search"></i> Search
                    </button>
                </div>
                <div class="col-md-2">
                    <a asp-action="Index" class="btn btn-outline-secondary w-100">
                        <i class="bi bi-x-circle"></i> Clear
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Results Card -->
    <div class="card shadow-sm">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Putaway Tasks (@Model.TotalCount total)</h5>
            <span class="badge bg-light text-dark">Page @Model.CurrentPage of @Model.TotalPages</span>
        </div>

        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>SKU</th>
                        <th>Product</th>
                        <th>Quantity</th>
                        <th>Status</th>
                        <th>Created On</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model.Items == null || !Model.Items.Any())
                    {
                        <tr>
                            <td colspan="7" class="text-center py-4 text-muted">
                                No putaway tasks found.
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>@item.PutawayId</td>
                                <td>@item.SKU</td>
                                <td>@item.ProductName</td>
                                <td>@item.Qty</td>

                                <td>
                                    @if (item.Status == "Pending")
                                    {
                                        <span class="badge bg-warning text-dark">@item.Status</span>
                                    }
                                    else if (item.Status == "Assigned")
                                    {
                                        <span class="badge bg-primary">@item.Status</span>
                                    }
                                    else if (item.Status == "InProgress")
                                    {
                                        <span class="badge bg-info">@item.Status</span>
                                    }
                                    else if (item.Status == "Completed")
                                    {
                                        <span class="badge bg-success">@item.Status</span>
                                    }
                                    else if (item.Status == "Closed")
                                    {
                                        <span class="badge bg-secondary">@item.Status</span>
                                    }
                                </td>

                                <td>@item.CreatedOn.ToString("dd MMM yyyy HH:mm")</td>

                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        @if (item.Status == "Pending")
                                        {
                                            <a asp-action="AutoAssign" asp-route-id="@item.PutawayId" 
                                               class="btn btn-sm btn-primary" title="Auto-Assign Bins">
                                                <i class="bi bi-cpu"></i> Auto
                                            </a>
                                            <a asp-action="AssignManual" asp-route-id="@item.PutawayId" 
                                               class="btn btn-sm btn-secondary" title="Manual Assignment">
                                                <i class="bi bi-hand-index"></i> Manual
                                            </a>
                                        }
                                        else if (item.Status == "Assigned")
                                        {
                                            <a asp-action="Execute" asp-route-id="@item.PutawayId" 
                                               class="btn btn-sm btn-success" title="Execute Putaway">
                                                <i class="bi bi-check-circle"></i> Execute
                                            </a>
                                            <a asp-action="AssignManual" asp-route-id="@item.PutawayId" 
                                               class="btn btn-sm btn-warning" title="Edit Assignment">
                                                <i class="bi bi-pencil"></i> Edit
                                            </a>
                                        }
                                        else if (item.Status == "Completed")
                                        {
                                            <form asp-action="Close" asp-route-id="@item.PutawayId" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-secondary" 
                                                        onclick="return confirm('Close this putaway task?')">
                                                    <i class="bi bi-lock"></i> Close
                                                </button>
                                            </form>
                                        }
                                        
                                        <a asp-action="Details" asp-route-id="@item.PutawayId" 
                                           class="btn btn-sm btn-outline-primary" title="View Details">
                                            <i class="bi bi-eye"></i> Details
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }

                </tbody>

            </table>
        </div>

        @if (Model.TotalPages > 1)
        {
            <div class="card-footer">
                <nav>
                    <ul class="pagination pagination-sm mb-0 justify-content-center">
                        <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                            <a class="page-link" asp-action="Index" 
                               asp-route-page="@(Model.CurrentPage - 1)" 
                               asp-route-search="@Model.SearchTerm" 
                               asp-route-status="@Model.StatusFilter">
                                Previous
                            </a>
                        </li>

                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" asp-action="Index" 
                                   asp-route-page="@i" 
                                   asp-route-search="@Model.SearchTerm" 
                                   asp-route-status="@Model.StatusFilter">
                                    @i
                                </a>
                            </li>
                        }

                        <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                            <a class="page-link" asp-action="Index" 
                               asp-route-page="@(Model.CurrentPage + 1)" 
                               asp-route-search="@Model.SearchTerm" 
                               asp-route-status="@Model.StatusFilter">
                                Next
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        }
    </div>

</div>
