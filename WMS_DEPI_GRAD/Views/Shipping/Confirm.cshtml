@model WMS_DEPI_GRAD.ViewModels.ShippingConfirmationViewModel

@{
    ViewData["Title"] = "Confirm Shipment";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-truck"></i> Confirm Shipment</h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="row">
        <div class="col-md-5">
            <!-- Order Details Card -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Order Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">SO Number:</dt>
                        <dd class="col-sm-8"><strong>@Model.SO_Number</strong></dd>

                        <dt class="col-sm-4">Customer:</dt>
                        <dd class="col-sm-8">@Model.CustomerName</dd>

                        <dt class="col-sm-4">Warehouse:</dt>
                        <dd class="col-sm-8">@Model.WarehouseName</dd>

                        <dt class="col-sm-4">Order Date:</dt>
                        <dd class="col-sm-8">@Model.OrderDate.ToString("yyyy-MM-dd")</dd>

                        <dt class="col-sm-4">Delivery Note:</dt>
                        <dd class="col-sm-8"><span class="badge bg-success">@Model.DeliveryNoteNumber</span></dd>
                    </dl>
                </div>
            </div>

            <!-- Items Card -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Items to Ship</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped mb-0 small">
                            <thead>
                                <tr>
                                    <th class="ps-3">Product</th>
                                    <th>Quantity</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    <tr>
                                        <td class="ps-3">
                                            <strong>@item.ProductName</strong><br />
                                            <span class="text-muted">@item.SKU</span>
                                        </td>
                                        <td>
                                            @item.QtyPicked / @item.QtyOrdered
                                            @if (item.QtyPicked < item.QtyOrdered)
                                            {
                                                <i class="bi bi-exclamation-triangle text-warning" title="Partial Shipment"></i>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot class="table-light">
                                <tr>
                                    <td class="ps-3"><strong>Total Units</strong></td>
                                    <td><strong>@Model.Items.Sum(i => i.QtyPicked)</strong></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-7">
            <!-- Shipment Form -->
            <div class="card shadow-sm border-success">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-box-seam"></i> Shipment Details</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Confirm" asp-route-id="@Model.SalesOrderId" method="post">
                        @Html.AntiForgeryToken()
                        
                        <div class="mb-3">
                            <label class="form-label fw-bold">Carrier <span class="text-danger">*</span></label>
                            <select name="carrier" class="form-select form-select-lg" required>
                                <option value="">-- Select Carrier --</option>
                                <option value="FedEx">FedEx</option>
                                <option value="UPS">UPS</option>
                                <option value="USPS">USPS</option>
                                <option value="DHL">DHL</option>
                                <option value="Internal Fleet">Internal Fleet</option>
                                <option value="Customer Pickup">Customer Pickup</option>
                                <option value="Other">Other</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Tracking Number <span class="text-danger">*</span></label>
                            <input type="text" name="trackingNumber" class="form-control form-control-lg" 
                                   placeholder="Enter tracking or BOL number" required />
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Shipping Notes</label>
                            <textarea name="notes" class="form-control" rows="3" 
                                      placeholder="Any special instructions, dock number, or comments..."></textarea>
                        </div>

                        <div class="alert alert-warning d-flex align-items-center">
                            <i class="bi bi-exclamation-triangle-fill fs-4 me-3"></i>
                            <div>
                                <strong>Final Step:</strong> Confirming this shipment will reduce inventory levels, generate a transaction log, and mark the order as "Shipped". This cannot be undone.
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4 me-2">Cancel</a>
                            <button type="submit" class="btn btn-success btn-lg px-5">
                                <i class="bi bi-check-lg"></i> Confirm Shipment
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
