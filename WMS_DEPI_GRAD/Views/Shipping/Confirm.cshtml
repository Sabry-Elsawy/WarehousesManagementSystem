@model WMS_DEPI_GRAD.ViewModels.ShippingConfirmationViewModel

@{
    ViewData["Title"] = "Confirm Shipment";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-truck"></i> Confirm Shipment</h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Order Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">SO Number:</dt>
                        <dd class="col-sm-8"><strong>@Model.SO_Number</strong></dd>

                        <dt class="col-sm-4">Customer:</dt>
                        <dd class="col-sm-8">@Model.CustomerName</dd>

                        <dt class="col-sm-4">Warehouse:</dt>
                        <dd class="col-sm-8">@Model.WarehouseName</dd>

                        <dt class="col-sm-4">Order Date:</dt>
                        <dd class="col-sm-8">@Model.OrderDate.ToString("yyyy-MM-dd")</dd>

                        <dt class="col-sm-4">Delivery Note #:</dt>
                        <dd class="col-sm-8"><strong class="text-success">@Model.DeliveryNoteNumber</strong></dd>
                    </dl>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Items to Ship</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>SKU</th>
                                    <th>Qty Ordered</th>
                                    <th>Qty Picked</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    <tr>
                                        <td>@item.ProductName</td>
                                        <td>@item.SKU</td>
                                        <td>@item.QtyOrdered</td>
                                        <td><strong>@item.QtyPicked</strong></td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr class="table-active">
                                    <td colspan="2"><strong>Total Quantity:</strong></td>
                                    <td><strong>@Model.Items.Sum(i => i.QtyOrdered)</strong></td>
                                    <td><strong>@Model.Items.Sum(i => i.QtyPicked)</strong></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>

            <div class="alert alert-warning">
                <i class="bi bi-exclamation-triangle"></i> 
                <strong>Confirm Shipment:</strong> This action will mark the order as shipped and generate the delivery note. This action cannot be undone.
            </div>

            <form asp-action="Confirm" asp-route-id="@Model.SalesOrderId" method="post">
                <div class="mt-4">
                    <button type="submit" class="btn btn-success btn-lg" 
                            onclick="return confirm('Are you sure you want to ship this order?');">
                        <i class="bi bi-truck"></i> Confirm Shipment
                    </button>
                    <a asp-action="Index" class="btn btn-secondary btn-lg">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
