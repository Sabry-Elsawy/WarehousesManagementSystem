@{
    ViewData["Title"] = "Home Page";
	Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<!-- Hero Cover Section -->
<section class="hero-cover">
    <div class="hero-overlay"></div>
    <div class="hero-image">
        <img  src="~/images/wms-cover-2.jpg" 
             alt="Warehouse Management System" 
             class="hero-bg-image" 
             onerror="this.style.display='none'" />
    </div>
    <div class="hero-content">
        <div class="hero-text">
            <h1 class="hero-title">
                <span class="hero-welcome">Welcome to</span>
                <span class="hero-brand">WMS</span>
                <span class="hero-subtitle">Warehouse Management System</span>
            </h1>
            <p class="hero-description">
                Streamline your warehouse operations with our comprehensive management solution. 
                Track inventory, manage orders, and optimize your workflow efficiently.
            </p>
            <div class="hero-actions">
                <a asp-controller="Account" asp-action="Login" class="btn-hero-primary">
                    <i class="fas fa-sign-in-alt me-2"></i>
                    Get Started
                </a>
                @* <a href="/Account/Index" class="btn-hero-secondary"> *@
                @*     <i class="fas fa-info-circle me-2"></i> *@
                @*     Learn More *@
                @* </a> *@
            </div>
        </div>
    </div>
</section>

<!-- Content Section -->
<section class="services content-section py-4">
    <div class="container mt-5">
        <h2 class="text-center text-muted mb-4">Our Services</h2>
        <div class="row">
            <div class="col-xl-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-boxes text-primary-orange"></i>
                    </div>
                    <h3>Inventory Management</h3>
                    <p>Track and manage your inventory with real-time updates and automated alerts.</p>
                </div>
            </div>
            <div class="col-xl-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-chart-line text-primary-orange"></i>
                    </div>
                    <h3>Analytics & Reports</h3>
                    <p>Get detailed insights and reports to optimize your warehouse operations.</p>
                </div>
            </div>
            <div class="col-xl-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-users text-primary-orange"></i>
                    </div>
                    <h3>Team Management</h3>
                    <p>Coordinate your team efficiently with role-based access and task management.</p>
                </div>
            </div>
            <div class="col-xl-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-shipping-fast text-primary-orange"></i>
                    </div>
                    <h3>Order Fulfillment</h3>
                    <p>Streamline your order processing from picking to shipping with ease.</p>
                </div>
            </div>  
            <div class="col-xl-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-warehouse text-primary-orange"></i>
                    </div>
                    <h3>Location Management</h3>
                    <p>Organize your warehouse with zones, aisles, racks, and bins for optimal space utilization.</p>
                </div>
            </div>  
            <div class="col-xl-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-truck-loading text-primary-orange"></i>
                    </div>
                    <h3>Receiving & Putaway</h3>
                    <p>Efficiently process incoming shipments and automate putaway strategies.</p>
                </div>
            </div>  
        </div>
    </div>
</section>

<div class="container my-5">
    <h2 class="text-primary-orange mb-4">About WMS</h2>
    <p>Welcome to our comprehensive Warehouse Management System designed to transform your warehouse operations. Our platform empowers you to manage inventory, process orders, and coordinate your team with unprecedented efficiency.</p>
    <p>Our solution offers real-time tracking, automated workflows, and powerful analytics to help you optimize every aspect of your warehouse operations. From receiving and putaway to picking, packing, and shipping, we've got you covered.</p>
    <p>Built with modern technology and industry best practices, our WMS adapts to your unique business needs while maintaining simplicity and ease of use.</p>
</div>

<!-- Key Features Section -->
<section class="content-section py-5 bg-light">
    <div class="container">
        <h2 class="text-center text-primary-orange mb-5">Key Features</h2>
        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title text-primary-orange">
                            <i class="fas fa-warehouse me-2"></i>Warehouse Operations
                        </h5>
