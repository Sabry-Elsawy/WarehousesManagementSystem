@model WMS_DEPI_GRAD.ViewModels.SupplierListViewModel

@{
    ViewData["Title"] = "Suppliers";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-truck"></i> Suppliers</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Create New Supplier
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <form method="get" class="row g-3 mb-3">
                <div class="col-md-4">
                    <input type="text" name="search" value="@Model.SearchTerm" class="form-control" placeholder="Search by name or email..." />
                </div>
                <div class="col-md-3">
                    <select name="active" class="form-select">
                        <option value="">All Status</option>
                        <option value="true" selected="@(Model.FilterActive == true)">Active Only</option>
                        <option value="false" selected="@(Model.FilterActive == false)">Inactive Only</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <select name="sortBy" class="form-select">
                        <option value="Name" selected="@(Model.SortBy == "Name")">Name</option>
                        <option value="CreatedOn" selected="@(Model.SortBy == "CreatedOn")">Created Date</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-secondary w-100">
                        <i class="fas fa-search"></i> Filter
                    </button>
                </div>
            </form>

            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Contact Email</th>
                            <th>Contact Phone</th>
                            <th>Address</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Suppliers)
                        {
                            <tr>
                                <td><strong>@item.Name</strong></td>
                                <td>@item.ContactEmail</td>
                                <td>@item.ContactPhone</td>
                                <td>@item.Address</td>
                                <td>
                                    @if (item.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="View Details">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Toggle Status">
                                        <i class="fas fa-toggle-off"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (Model.TotalPages > 1)
            {
                <nav>
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                            <a class="page-link" asp-route-page="@(Model.CurrentPage - 1)" asp-route-search="@Model.SearchTerm" asp-route-active="@Model.FilterActive">Previous</a>
                        </li>
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" asp-route-page="@i" asp-route-search="@Model.SearchTerm" asp-route-active="@Model.FilterActive">@i</a>
                            </li>
                        }
                        <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                            <a class="page-link" asp-route-page="@(Model.CurrentPage + 1)" asp-route-search="@Model.SearchTerm" asp-route-active="@Model.FilterActive">Next</a>
                        </li>
                    </ul>
                </nav>
                <p class="text-center text-muted">
                    Page @Model.CurrentPage of @Model.TotalPages (Total: @Model.TotalCount suppliers)
                </p>
            }
        </div>
    </div>
</div>
