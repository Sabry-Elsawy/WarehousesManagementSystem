@model WMS_DEPI_GRAD.ViewModels.ASNViewModel

@{
    ViewData["Title"] = "ASN Details";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-shipping-fast"></i> ASN: @Model.ASN_Number</h2>
        <div>
            @if (Model.Status == WMS.DAL.AdvancedShippingNoticeStatus.Sent)
            {
                <form asp-action="MarkReceived" asp-route-id="@Model.Id" method="post" class="d-inline">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-check-circle"></i> Mark as Received
                    </button>
                </form>
            }
            @if (Model.Status == WMS.DAL.AdvancedShippingNoticeStatus.Received)
            {
                <a asp-controller="Receipt" asp-action="Create" asp-route-asnId="@Model.Id" class="btn btn-primary">
                    <i class="fas fa-box-open"></i> Create Receipt
                </a>
                <form asp-action="Close" asp-route-id="@Model.Id" method="post" class="d-inline">
                    <button type="submit" class="btn btn-secondary">
                        <i class="fas fa-lock"></i> Close ASN
                    </button>
                </form>
            }
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5>ASN Information</h5>
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tr>
                            <th>ASN Number:</th>
                            <td>@Model.ASN_Number</td>
                        </tr>
                        <tr>
                            <th>Purchase Order:</th>
                            <td>
                                <a asp-controller="PurchaseOrder" asp-action="Details" asp-route-id="@Model.PurchaseOrderId">
                                    @Model.PO_Number
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <th>Expected Arrival:</th>
                            <td>@Model.ExpectedArrivalDate.ToShortDateString()</td>
                        </tr>
                        <tr>
                            <th>Tracking Number:</th>
                            <td>@Model.TrackingNumber</td>
                        </tr>
                        <tr>
                            <th>Status:</th>
                            <td>
                                @if (Model.Status == WMS.DAL.AdvancedShippingNoticeStatus.Sent)
                                {
                                    <span class="badge bg-info">Sent</span>
                                }
                                else if (Model.Status == WMS.DAL.AdvancedShippingNoticeStatus.Received)
                                {
                                    <span class="badge bg-success">Received</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Closed</span>
                                }
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-info text-white">
                    <h5>Audit Information</h5>
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tr>
                            <th>Created On:</th>
                            <td>@Model.CreatedOn</td>
                        </tr>
                        <tr>
                            <th>Created By:</th>
                            <td>@Model.CreatedBy</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-secondary text-white d-flex justify-content-between align-items-center">
            <h5>ASN Items</h5>
            @if (Model.Status == WMS.DAL.AdvancedShippingNoticeStatus.Sent)
            {
                <button type="button" class="btn btn-sm btn-light" data-bs-toggle="modal" data-bs-target="#addItemModal">
                    <i class="fas fa-plus"></i> Add Item
                </button>
            }
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>SKU</th>
                            <th>Product</th>
                            <th>Qty Shipped</th>
                            <th>Qty Ordered (PO)</th>
                            <th>Linked PO Item</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>@item.SKU</td>
                                <td>@item.ProductName</td>
                                <td>@item.QtyShipped</td>
                                <td>
                                    @if (item.LinkedPOItemId.HasValue)
                                    {
                                        var poItem = Model.POItems.FirstOrDefault(p => p.Id == item.LinkedPOItemId.Value);
                                        @(poItem?.QtyOrdered ?? 0)
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td>
                                    @if (item.LinkedPOItemId.HasValue)
                                    {
                                        <span class="badge bg-success"><i class="fas fa-link"></i> Linked</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">Not Linked</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<!-- Add Item Modal -->
<div class="modal fade" id="addItemModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add ASN Item</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="addItemForm">
                    <input type="hidden" id="asnId" value="@Model.Id" />
                    <div class="mb-3">
                        <label for="productId" class="form-label">Product</label>
                        <select id="productId" class="form-select">
                            <option value="">-- Select Product --</option>
                            @foreach (var product in ViewBag.Products as IEnumerable<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)
                            {
                                <option value="@product.Value">@product.Text</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="qtyShipped" class="form-label">Quantity Shipped</label>
                        <input type="number" id="qtyShipped" class="form-control" min="1" value="1" />
                    </div>
                    <div class="mb-3">
                        <label for="linkedPOItemId" class="form-label">Link to PO Item (Optional)</label>
                        <select id="linkedPOItemId" class="form-select">
                            <option value="">-- Not Linked --</option>
                            @foreach (var poItem in Model.POItems)
                            {
                                <option value="@poItem.Id">@poItem.ProductName (@poItem.QtyOrdered units)</option>
                            }
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="addItem()">Add Item</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function addItem() {
            const linkedPOItemValue = $('#linkedPOItemId').val();
            const data = {
                asnId: parseInt($('#asnId').val()),
                item: {
                    productId: parseInt($('#productId').val()),
                    qtyShipped: parseInt($('#qtyShipped').val()),
                    linkedPOItemId: linkedPOItemValue ? parseInt(linkedPOItemValue) : null
                }
            };

            $.ajax({
                url: '@Url.Action("AddItem")',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(data),
                success: function (result) {
                    if (result.success) {
                        location.reload();
                    } else {
                        alert(result.message);
                    }
                },
                error: function () {
                    alert('Error adding item');
                }
            });
        }
    </script>
}
