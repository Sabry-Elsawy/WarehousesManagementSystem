@model WMS_DEPI_GRAD.ViewModels.PurchaseOrderViewModel

@{
    ViewData["Title"] = "Purchase Order Details";
}

<div class="container-fluid py-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">
                <i class="fas fa-file-invoice text-primary me-2"></i>
                Purchase Order: <span class="text-primary">@Model.PO_Number</span>
            </h2>
            <p class="text-muted mb-0">Complete purchase order information and line items</p>
        </div>
        <div class="d-flex gap-2">
            @if (Model.Status == WMS.DAL.PurchaseOrderStatus.Open)
            {
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning shadow-sm">
                    <i class="fas fa-edit me-2"></i>Edit
                </a>
                <form asp-action="Approve" asp-route-id="@Model.Id" method="post" class="d-inline">
                    <button type="submit" class="btn btn-success shadow-sm">
                        <i class="fas fa-check me-2"></i>Approve
                    </button>
                </form>
            }
            @if (Model.Status == WMS.DAL.PurchaseOrderStatus.Approved)
            {
                <a asp-controller="ASN" asp-action="Create" asp-route-poId="@Model.Id" class="btn btn-info shadow-sm">
                    <i class="fas fa-shipping-fast me-2"></i>Create ASN
                </a>
                <form asp-action="Close" asp-route-id="@Model.Id" method="post" class="d-inline">
                    <button type="submit" class="btn btn-secondary shadow-sm">
                        <i class="fas fa-lock me-2"></i>Close PO
                    </button>
                </form>
            }
        </div>
    </div>

    <!-- Alert Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Two Column Layout for PO Info and Audit Info -->
    <div class="row g-4 mb-4">
        <!-- PO Information Card -->
        <div class="col-lg-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center py-3">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>PO Information
                    </h5>
                    @if (Model.Status == WMS.DAL.PurchaseOrderStatus.Open)
                    {
                        <button type="submit" form="updateHeaderForm" class="btn btn-sm btn-light">
                            <i class="fas fa-save me-1"></i>Save Changes
                        </button>
                    }
                </div>
                <div class="card-body p-4">
                    @if (Model.Status == WMS.DAL.PurchaseOrderStatus.Open)
                    {
                        <form id="updateHeaderForm" asp-action="Edit" method="post">
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="OrderDate" />
                            
                            <div class="mb-3">
                                <label class="form-label fw-semibold text-muted small">
                                    <i class="fas fa-hashtag me-1"></i>PO NUMBER
                                </label>
                                <input asp-for="PO_Number" class="form-control form-control-lg" />
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-semibold text-muted small">
                                    <i class="fas fa-truck me-1"></i>VENDOR
                                </label>
                                <select asp-for="VendorId" asp-items="ViewBag.Vendors" class="form-select form-select-lg"></select>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-semibold text-muted small">
                                    <i class="fas fa-warehouse me-1"></i>WAREHOUSE
                                </label>
                                <select asp-for="WarehouseId" asp-items="ViewBag.Warehouses" class="form-select form-select-lg"></select>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-semibold text-muted small">
                                    <i class="fas fa-calendar me-1"></i>ORDER DATE
                                </label>
                                <div class="form-control-plaintext fs-5">@Model.OrderDate.ToShortDateString()</div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-semibold text-muted small">
                                    <i class="fas fa-calendar-alt me-1"></i>EXPECTED ARRIVAL
                                </label>
                                <input asp-for="ExpectedArrivalDate" type="date" class="form-control form-control-lg" />
                            </div>

                            <div class="mb-0">
                                <label class="form-label fw-semibold text-muted small">
                                    <i class="fas fa-flag me-1"></i>STATUS
                                </label>
                                <div>
                                    <span class="badge bg-warning text-dark fs-6 px-3 py-2">
                                        <i class="fas fa-clock me-1"></i>Open
                                    </span>
                                </div>
                            </div>
                        </form>
                    }
                    else
                    {
                        <div class="mb-3">
                            <label class="form-label fw-semibold text-muted small">
                                <i class="fas fa-hashtag me-1"></i>PO NUMBER
                            </label>
                            <div class="fs-5 fw-bold text-dark">@Model.PO_Number</div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold text-muted small">
                                <i class="fas fa-truck me-1"></i>VENDOR
                            </label>
                            <div class="fs-5">@Model.VendorName</div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold text-muted small">
                                <i class="fas fa-warehouse me-1"></i>WAREHOUSE
                            </label>
                            <div class="fs-5">@Model.WarehouseName</div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold text-muted small">
                                <i class="fas fa-calendar me-1"></i>ORDER DATE
                            </label>
                            <div class="fs-5">@Model.OrderDate.ToShortDateString()</div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold text-muted small">
                                <i class="fas fa-calendar-alt me-1"></i>EXPECTED ARRIVAL
                            </label>
                            <div class="fs-5">@Model.ExpectedArrivalDate.ToShortDateString()</div>
                        </div>

                        <div class="mb-0">
                            <label class="form-label fw-semibold text-muted small">
                                <i class="fas fa-flag me-1"></i>STATUS
                            </label>
                            <div>
                                @if (Model.Status == WMS.DAL.PurchaseOrderStatus.Approved)
                                {
                                    <span class="badge bg-success fs-6 px-3 py-2">
                                        <i class="fas fa-check me-1"></i>Approved
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary fs-6 px-3 py-2">
                                        <i class="fas fa-lock me-1"></i>Closed
                                    </span>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Audit Information Card -->
        <div class="col-lg-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-info text-white py-3">
                    <h5 class="mb-0">
                        <i class="fas fa-history me-2"></i>Audit Information
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="mb-4">
                        <label class="form-label fw-semibold text-muted small">
                            <i class="fas fa-clock me-1"></i>CREATED ON
                        </label>
                        <div class="fs-5">@Model.CreatedOn</div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-semibold text-muted small">
                            <i class="fas fa-user me-1"></i>CREATED BY
                        </label>
                        <div class="fs-5">
                            <span class="badge bg-light text-dark border px-3 py-2">
                                @Model.CreatedBy
                            </span>
                        </div>
                    </div>

                    @if (Model.LastModifiedOn.HasValue)
                    {
                        <div class="mb-4">
                            <label class="form-label fw-semibold text-muted small">
                                <i class="fas fa-clock me-1"></i>LAST MODIFIED
                            </label>
                            <div class="fs-5">@Model.LastModifiedOn</div>
                        </div>

                        <div class="mb-0">
                            <label class="form-label fw-semibold text-muted small">
                                <i class="fas fa-user-edit me-1"></i>MODIFIED BY
                            </label>
                            <div class="fs-5">
                                <span class="badge bg-light text-dark border px-3 py-2">
                                    @Model.LastModifiedBy
                                </span>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-light border mb-0">
                            <i class="fas fa-info-circle me-2 text-muted"></i>
                            <span class="text-muted">No modifications yet</span>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- PO Line Items Card -->
    <div class="card shadow-sm border-0">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center py-3">
            <h5 class="mb-0">
                <i class="fas fa-boxes me-2"></i>Purchase Order Line Items
            </h5>
            @if (Model.Status == WMS.DAL.PurchaseOrderStatus.Open)
            {
                <button type="button" class="btn btn-sm btn-light" data-bs-toggle="modal" data-bs-target="#addItemModal">
                    <i class="fas fa-plus me-1"></i>Add Item
                </button>
            }
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th class="px-4 py-3">SKU</th>
                            <th class="py-3">Product Name</th>
                            <th class="py-3 text-center">Qty Ordered</th>
                            <th class="py-3 text-end">Unit Price</th>
                            <th class="py-3 text-center">Qty Received</th>
                            <th class="py-3 text-end">Line Total</th>
                            <th class="py-3 text-center">Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td class="px-4">
                                    <code class="bg-light px-2 py-1 rounded">@item.SKU</code>
                                </td>
                                <td>
                                    <strong>@item.ProductName</strong>
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-primary px-3 py-2">@item.QtyOrdered</span>
                                </td>
                                <td class="text-end fw-semibold">
                                    @item.UnitPrice.ToString("C")
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-info px-3 py-2">@item.QtyReceived</span>
                                </td>
                                <td class="text-end fw-bold text-dark">
                                    @((item.QtyOrdered * item.UnitPrice).ToString("C"))
                                </td>
                                <td class="text-center">
                                    @if (item.QtyReceived >= item.QtyOrdered)
                                    {
                                        <span class="badge bg-success px-3 py-2">
                                            <i class="fas fa-check me-1"></i>Complete
                                        </span>
                                    }
                                    else if (item.QtyReceived > 0)
                                    {
                                        <span class="badge bg-warning text-dark px-3 py-2">
                                            <i class="fas fa-exclamation-triangle me-1"></i>Partial
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary px-3 py-2">
                                            <i class="fas fa-clock me-1"></i>Pending
                                        </span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="table-light">
                        <tr>
                            <th colspan="5" class="text-end px-4 py-3">
                                <h5 class="mb-0">TOTAL:</h5>
                            </th>
                            <th class="text-end py-3">
                                <h5 class="mb-0 text-primary">
                                    @Model.Items.Sum(i => i.QtyOrdered * i.UnitPrice).ToString("C")
                                </h5>
                            </th>
                            <th></th>
                        </tr>
                    </tfoot>
                </table>
            </div>
            @if (!Model.Items.Any())
            {
                <div class="p-5 text-center">
                    <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
                    <p class="text-muted mb-3">No line items added yet</p>
                    @if (Model.Status == WMS.DAL.PurchaseOrderStatus.Open)
                    {
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addItemModal">
                            <i class="fas fa-plus me-2"></i>Add Your First Item
                        </button>
                    }
                </div>
            }
        </div>
    </div>

    <!-- Back Button -->
    <div class="mt-4">
        <a asp-action="Index" class="btn btn-lg btn-outline-secondary shadow-sm">
            <i class="fas fa-arrow-left me-2"></i>Back to List
        </a>
    </div>
</div>

<!-- Add Item Modal -->
<div class="modal fade" id="addItemModal" tabindex="-1" aria-labelledby="addItemModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="addItemModalLabel">
                    <i class="fas fa-plus-circle me-2"></i>Add Purchase Order Item
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4">
                <form id="addItemForm">
                    <input type="hidden" id="poId" value="@Model.Id" />
                    
                    <div class="mb-3">
                        <label for="productId" class="form-label fw-semibold">
                            <i class="fas fa-box me-1 text-primary"></i>Product
                        </label>
                        <select id="productId" class="form-select form-select-lg" required>
                            <option value="">-- Select Product --</option>
                            @foreach (var product in ViewBag.Products as IEnumerable<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)
                            {
                                <option value="@product.Value">@product.Text</option>
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="qtyOrdered" class="form-label fw-semibold">
                            <i class="fas fa-sort-numeric-up me-1 text-primary"></i>Quantity Ordered
                        </label>
                        <input type="number" id="qtyOrdered" class="form-control form-control-lg" min="1" value="1" required />
                        <small class="text-muted">Minimum quantity: 1</small>
                    </div>

                    <div class="mb-3">
                        <label for="unitPrice" class="form-label fw-semibold">
                            <i class="fas fa-dollar-sign me-1 text-primary"></i>Unit Price
                        </label>
                        <input type="number" id="unitPrice" class="form-control form-control-lg" min="0.01" step="0.01" value="0" required />
                        <small class="text-muted">Price per unit</small>
                    </div>
                </form>
            </div>
            <div class="modal-footer bg-light">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>Cancel
                </button>
                <button type="button" class="btn btn-primary px-4" onclick="addItem()">
                    <i class="fas fa-plus me-2"></i>Add Item
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function addItem() {
            const data = {
                poId: parseInt($('#poId').val()),
                item: {
                    productId: parseInt($('#productId').val()),
                    qtyOrdered: parseInt($('#qtyOrdered').val()),
                    unitPrice: parseFloat($('#unitPrice').val())
                }
            };

            // Basic validation
            if (!data.item.productId) {
                alert('Please select a product');
                return;
            }
            if (data.item.qtyOrdered < 1) {
                alert('Quantity must be at least 1');
                return;
            }
            if (data.item.unitPrice <= 0) {
                alert('Unit price must be greater than 0');
                return;
            }

            $.ajax({
                url: '@Url.Action("AddItem")',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(data),
                success: function (result) {
                    if (result.success) {
                        location.reload();
                    } else {
                        alert(result.message || 'Error adding item');
                    }
                },
                error: function (xhr, status, error) {
                    alert('Error adding item: ' + error);
                }
            });
        }

        // Allow Enter key to submit modal form
        $('#addItemForm').on('keypress', function(e) {
            if (e.which === 13) {
                e.preventDefault();
                addItem();
            }
        });
    </script>
}
