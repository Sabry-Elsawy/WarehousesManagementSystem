@model WMS.DAL.PurchaseOrder

@{
    ViewData["Title"] = "Edit Purchase Order";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h4><i class="fas fa-edit"></i> Edit Purchase Order: @Model.PO_Number</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="PO_Number" class="form-label"></label>
                            <input asp-for="PO_Number" class="form-control" />
                            <span asp-validation-for="PO_Number" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="VendorId" class="form-label"></label>
                            <select asp-for="VendorId" class="form-select" asp-items="ViewBag.Vendors">
                                <option value="">-- Select Vendor --</option>
                            </select>
                            <span asp-validation-for="VendorId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="WarehouseId" class="form-label"></label>
                            <select asp-for="WarehouseId" class="form-select" asp-items="ViewBag.Warehouses">
                                <option value="">-- Select Warehouse --</option>
                            </select>
                            <span asp-validation-for="WarehouseId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ExpectedArrivalDate" class="form-label"></label>
                            <input asp-for="ExpectedArrivalDate" class="form-control" type="date" />
                            <span asp-validation-for="ExpectedArrivalDate" class="text-danger"></span>
                        </div>

                        <div class="alert alert-info">
                            <strong>Status:</strong> @Model.Status.ToString()
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save"></i> Update PO
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
