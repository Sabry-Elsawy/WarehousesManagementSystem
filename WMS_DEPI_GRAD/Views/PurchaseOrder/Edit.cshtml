@model WMS_DEPI_GRAD.ViewModels.PurchaseOrderViewModel

@{
    ViewData["Title"] = "Edit Purchase Order";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-7">
            <!-- Page Header -->
            <div class="mb-4">
                <h2 class="mb-1">
                    <i class="fas fa-edit text-warning me-2"></i>
                    Edit Purchase Order
                </h2>
                <p class="text-muted mb-0">Update purchase order: <strong>@Model.PO_Number</strong></p>
            </div>

            <!-- Edit Form Card -->
            <div class="card shadow-sm border-0">
                <div class="card-header bg-warning text-dark py-3">
                    <h5 class="mb-0">
                        <i class="fas fa-file-invoice me-2"></i>Purchase Order Details
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3" role="alert"></div>

                        <div class="row g-3">
                            <!-- PO Number -->
                            <div class="col-md-6">
                                <label asp-for="PO_Number" class="form-label fw-semibold">
                                    <i class="fas fa-hashtag text-warning me-1"></i>
                                    PO Number
                                </label>
                                <input asp-for="PO_Number" class="form-control form-control-lg" placeholder="Enter PO number" />
                                <span asp-validation-for="PO_Number" class="text-danger small"></span>
                            </div>

                            <!-- Expected Arrival Date -->
                            <div class="col-md-6">
                                <label asp-for="ExpectedArrivalDate" class="form-label fw-semibold">
                                    <i class="fas fa-calendar-alt text-warning me-1"></i>
                                    Expected Arrival Date
                                </label>
                                <input asp-for="ExpectedArrivalDate" class="form-control form-control-lg" type="date" />
                                <span asp-validation-for="ExpectedArrivalDate" class="text-danger small"></span>
                            </div>

                            <!-- Vendor -->
                            <div class="col-md-6">
                                <label asp-for="VendorId" class="form-label fw-semibold">
                                    <i class="fas fa-truck text-warning me-1"></i>
                                    Vendor
                                </label>
                                <select asp-for="VendorId" class="form-select form-select-lg" asp-items="ViewBag.Vendors">
                                    <option value="">-- Select Vendor --</option>
                                </select>
                                <span asp-validation-for="VendorId" class="text-danger small"></span>
                            </div>

                            <!-- Warehouse -->
                            <div class="col-md-6">
                                <label asp-for="WarehouseId" class="form-label fw-semibold">
                                    <i class="fas fa-warehouse text-warning me-1"></i>
                                    Warehouse
                                </label>
                                <select asp-for="WarehouseId" class="form-select form-select-lg" asp-items="ViewBag.Warehouses">
                                    <option value="">-- Select Warehouse --</option>
                                </select>
                                <span asp-validation-for="WarehouseId" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Current Status Display -->
                        <div class="mt-4">
                            <div class="alert alert-light border d-flex align-items-center justify-content-between" role="alert">
                                <div>
                                    <strong class="text-dark">Current Status:</strong>
                                    @if (Model.Status == WMS.DAL.PurchaseOrderStatus.Open)
                                    {
                                        <span class="badge bg-warning text-dark ms-2 px-3 py-2">
                                            <i class="fas fa-clock me-1"></i>Open
                                        </span>
                                    }
                                    else if (Model.Status == WMS.DAL.PurchaseOrderStatus.Approved)
                                    {
                                        <span class="badge bg-success ms-2 px-3 py-2">
                                            <i class="fas fa-check me-1"></i>Approved
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary ms-2 px-3 py-2">
                                            <i class="fas fa-lock me-1"></i>Closed
                                        </span>
                                    }
                                </div>
                                <small class="text-muted">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Status cannot be changed via edit
                                </small>
                            </div>
                        </div>

                        <!-- Warning Info -->
                        <div class="alert alert-info border-0 mt-3 d-flex align-items-start" role="alert">
                            <i class="fas fa-exclamation-triangle me-2 mt-1"></i>
                            <div>
                                <strong>Note:</strong> Only basic information can be edited here. 
                                To manage line items, use the Details view. 
                                To change status, use Approve or Close actions.
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
                            <a asp-action="Index" class="btn btn-lg btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Back to List
                            </a>
                            <button type="submit" class="btn btn-lg btn-warning px-5 shadow">
                                <i class="fas fa-save me-2"></i>Update Purchase Order
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Additional Actions Card -->
            <div class="card shadow-sm border-0 mt-3">
                <div class="card-body">
                    <h6 class="text-muted mb-3">
                        <i class="fas fa-ellipsis-h me-2"></i>Additional Actions
                    </h6>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info">
                        <i class="fas fa-eye me-2"></i>View Full Details
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
