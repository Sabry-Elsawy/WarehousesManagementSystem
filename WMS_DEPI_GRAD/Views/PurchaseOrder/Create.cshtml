@model WMS_DEPI_GRAD.ViewModels.CreatePurchaseOrderViewModel

@{
    ViewData["Title"] = "Create Purchase Order";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-7">
            <!-- Page Header -->
            <div class="mb-4">
                <h2 class="mb-1">
                    <i class="fas fa-plus-circle text-primary me-2"></i>
                    Create New Purchase Order
                </h2>
                <p class="text-muted mb-0">Fill in the details to create a new purchase order</p>
            </div>

            <!-- Create Form Card -->
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="mb-0">
                        <i class="fas fa-file-invoice me-2"></i>Purchase Order Information
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3" role="alert"></div>

                        <div class="row g-3">
                            <!-- PO Number -->
                            <div class="col-md-6">
                                <label asp-for="PO_Number" class="form-label fw-semibold">
                                    <i class="fas fa-hashtag text-primary me-1"></i>
                                    PO Number
                                </label>
                                <input asp-for="PO_Number" class="form-control form-control-lg" placeholder="Enter PO number" />
                                <span asp-validation-for="PO_Number" class="text-danger small"></span>
                            </div>

                            <!-- Expected Arrival Date -->
                            <div class="col-md-6">
                                <label asp-for="ExpectedArrivalDate" class="form-label fw-semibold">
                                    <i class="fas fa-calendar-alt text-primary me-1"></i>
                                    Expected Arrival Date
                                </label>
                                <input asp-for="ExpectedArrivalDate" class="form-control form-control-lg" type="date" />
                                <span asp-validation-for="ExpectedArrivalDate" class="text-danger small"></span>
                            </div>

                            <!-- Vendor -->
                            <div class="col-md-6">
                                <label asp-for="VendorId" class="form-label fw-semibold">
                                    <i class="fas fa-truck text-primary me-1"></i>
                                    Vendor
                                </label>
                                <select asp-for="VendorId" class="form-select form-select-lg" asp-items="ViewBag.Vendors">
                                    <option value="">-- Select Vendor --</option>
                                </select>
                                <span asp-validation-for="VendorId" class="text-danger small"></span>
                            </div>

                            <!-- Warehouse -->
                            <div class="col-md-6">
                                <label asp-for="WarehouseId" class="form-label fw-semibold">
                                    <i class="fas fa-warehouse text-primary me-1"></i>
                                    Warehouse
                                </label>
                                <select asp-for="WarehouseId" class="form-select form-select-lg" asp-items="ViewBag.Warehouses">
                                    <option value="">-- Select Warehouse --</option>
                                </select>
                                <span asp-validation-for="WarehouseId" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Info Box -->
                        <div class="alert alert-info border-0 mt-4 d-flex align-items-start" role="alert">
                            <i class="fas fa-info-circle me-2 mt-1"></i>
                            <div>
                                <strong>Note:</strong> After creating the purchase order, you can add line items in the Details view. 
                                The PO will be created with an <strong>Open</strong> status.
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
                            <a asp-action="Index" class="btn btn-lg btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Back to List
                            </a>
                            <button type="submit" class="btn btn-lg btn-primary px-5 shadow">
                                <i class="fas fa-save me-2"></i>Create Purchase Order
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
