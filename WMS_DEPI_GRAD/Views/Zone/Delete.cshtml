@model WMS.DAL.Zone

@{
    ViewData["Title"] = "Delete Zone";
}

<div class="container-fluid">
    <div class="d-flex justify-content-center mt-5">
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-5 text-center">
                    <div class="mb-4 text-danger">
                        <i class="fas fa-exclamation-triangle fa-4x"></i>
                    </div>
                    <h2 class="fw-bold mb-3">Are you sure?</h2>
                    <p class="text-muted mb-4">
                        You are about to delete the zone <strong>@Model.Name</strong>.
                        <br>This action cannot be undone.
                    </p>

                    <div class="bg-light p-3 rounded mb-4 text-start">
                        <small class="text-muted d-block">Warehouse</small>
                        <strong>@(Model.Warehouse?.Name ?? "N/A")</strong>
                    </div>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-center gap-3">
                            <a asp-action="Index" class="btn btn-light px-4">Cancel</a>
                            <button type="submit" class="btn btn-danger px-4">Delete Zone</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
