@model IEnumerable<WMS_DEPI_GRAD.ViewModels.SalesOrderViewModel>

@{
    ViewData["Title"] = "Sales Orders";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-cart-check"></i> Sales Orders</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Sales Order
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>SO Number</th>
                            <th>Customer</th>
                            <th>Warehouse</th>
                            <th>Order Date</th>
                            <th>Status</th>
                            <th>Created On</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><strong>@item.SO_Number</strong></td>
                                <td>@item.CustomerName</td>
                                <td>@item.WarehouseName</td>
                                <td>@item.OrderDate.ToString("yyyy-MM-dd")</td>
                                <td>
                                    @if (item.Status == WMS.DAL.SalesOrderStatus.Draft)
                                    {
                                        <span class="badge bg-secondary">Draft</span>
                                    }
                                    else if (item.Status == WMS.DAL.SalesOrderStatus.Submitted)
                                    {
                                        <span class="badge bg-info">Submitted</span>
                                    }
                                    else if (item.Status == WMS.DAL.SalesOrderStatus.Picked)
                                    {
                                        <span class="badge bg-warning">Picked</span>
                                    }
                                    else if (item.Status == WMS.DAL.SalesOrderStatus.Shipped)
                                    {
                                        <span class="badge bg-success">Shipped</span>
                                    }
                                </td>
                                <td>@item.CreatedOn.ToString("yyyy-MM-dd")</td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Details">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    @if (item.Status == WMS.DAL.SalesOrderStatus.Draft)
                                    {
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
