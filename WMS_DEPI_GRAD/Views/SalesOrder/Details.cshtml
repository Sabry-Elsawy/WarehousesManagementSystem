@model WMS_DEPI_GRAD.ViewModels.SalesOrderViewModel

@{
    ViewData["Title"] = "Sales Order Details";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-file-text"></i> Sales Order #@Model.SO_Number</h2>
        <div>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Order Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">SO Number:</dt>
                        <dd class="col-sm-8"><strong><code>@Model.SO_Number</code></strong></dd>

                        <dt class="col-sm-4">Customer:</dt>
                        <dd class="col-sm-8">@Model.CustomerName</dd>

                        <dt class="col-sm-4">Warehouse:</dt>
                        <dd class="col-sm-8">@Model.WarehouseName</dd>

                        <dt class="col-sm-4">Order Date:</dt>
                        <dd class="col-sm-8">@Model.OrderDate.ToString("yyyy-MM-dd")</dd>

                        <dt class="col-sm-4">Status:</dt>
                        <dd class="col-sm-8">
                            @switch (Model.Status)
                            {
                                case WMS.DAL.SalesOrderStatus.Draft:
                                    <span class="badge bg-secondary fs-6">Draft</span>
                                    break;
                                case WMS.DAL.SalesOrderStatus.Submitted:
                                    <span class="badge bg-info fs-6">Submitted</span>
                                    break;
                                case WMS.DAL.SalesOrderStatus.Processing:
                                    <span class="badge bg-primary fs-6">Processing</span>
                                    break;
                                case WMS.DAL.SalesOrderStatus.Picked:
                                    <span class="badge bg-success fs-6">Picked</span>
                                    break;
                                case WMS.DAL.SalesOrderStatus.PartiallyPicked:
                                    <span class="badge bg-warning text-dark fs-6">Partially Picked</span>
                                    break;
                                case WMS.DAL.SalesOrderStatus.Shipped:
                                    <span class="badge bg-success fs-6"><i class="bi bi-truck"></i> Shipped</span>
                                    break;
                                case WMS.DAL.SalesOrderStatus.Cancelled:
                                    <span class="badge bg-danger fs-6">Cancelled</span>
                                    break;
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">Audit Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Created On:</dt>
                        <dd class="col-sm-8">@Model.CreatedOn.ToString("yyyy-MM-dd HH:mm")</dd>

                        <dt class="col-sm-4">Created By:</dt>
                        <dd class="col-sm-8">@Model.CreatedBy</dd>

                        @if (Model.LastModifiedOn.HasValue)
                        {
                            <dt class="col-sm-4">Modified On:</dt>
                            <dd class="col-sm-8">@Model.LastModifiedOn.Value.ToString("yyyy-MM-dd HH:mm")</dd>

                            <dt class="col-sm-4">Modified By:</dt>
                            <dd class="col-sm-8">@Model.LastModifiedBy</dd>
                        }
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <!-- Order Items -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-box-seam"></i> Order Items</h5>
            @if (Model.Status == WMS.DAL.SalesOrderStatus.Draft)
            {
                <button type="button" class="btn btn-light btn-sm text-primary fw-bold" data-bs-toggle="modal" data-bs-target="#addItemModal">
                    <i class="bi bi-plus-circle"></i> Add Item
                </button>
            }
        </div>
        <div class="card-body">
            @if (Model.Items != null && Model.Items.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Product Name</th>
                                <th>SKU</th>
                                <th>Qty Ordered</th>
                                <th>Qty Picked</th>
                                <th>Unit Price</th>
                                <th>Total</th>
                                <th>Status</th>
                                @if (Model.Status == WMS.DAL.SalesOrderStatus.Draft)
                                {
                                    <th class="text-end">Action</th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>@item.ProductName</td>
                                    <td><code>@item.SKU</code></td>
                                    <td>@item.QtyOrdered</td>
                                    <td>
                                        @item.QtyPicked
                                        @if (item.QtyPicked == item.QtyOrdered)
                                        {
                                            <i class="bi bi-check-circle text-success"></i>
                                        }
                                        else if (item.QtyPicked > 0)
                                        {
                                            <i class="bi bi-exclamation-triangle text-warning"></i>
                                        }
                                    </td>
                                    <td>@item.UnitPrice.ToString("C")</td>
                                    <td>@item.LineTotal.ToString("C")</td>
                                    <td>
                                        @if (item.QtyPicked == item.QtyOrdered)
                                        {
                                            <span class="badge bg-success">Complete</span>
                                        }
                                        else if (item.QtyPicked > 0)
                                        {
                                            <span class="badge bg-warning text-dark">Partial</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Pending</span>
                                        }
                                    </td>

                                    @if (Model.Status == WMS.DAL.SalesOrderStatus.Draft)
                                    {
                                        <td class="text-end">
                                            <form asp-action="RemoveItem" method="post" class="d-inline"
                                                  asp-route-salesOrderId="@Model.Id"
                                                  asp-route-itemId="@item.Id"
                                                  onsubmit="return confirm('Are you sure you want to remove this item?');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-outline-danger" title="Remove Item">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr class="table-active">
                                <td colspan="5" class="text-end"><strong>Grand Total:</strong></td>
                                <td><strong>@Model.Items.Sum(i => i.LineTotal).ToString("C")</strong></td>
                                <td></td>
                                @if (Model.Status == WMS.DAL.SalesOrderStatus.Draft)
                                {
                                    <td></td>
                                }
                            </tr>
                        </tfoot>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle"></i> No items added yet. Add items to submit this order.
                </div>
            }
        </div>
    </div>

    <!-- Actions -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0">Actions</h5>
        </div>
        <div class="card-body">
            @if (Model.Status == WMS.DAL.SalesOrderStatus.Draft)
            {
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="bi bi-pencil"></i> Edit Order
                </a>

                @if (Model.Items != null && Model.Items.Any())
                {
                    <form asp-action="Submit" asp-route-id="@Model.Id" method="post" class="d-inline"
                          onsubmit="return confirm('Are you sure you want to submit this Sales Order? This will allocate picking tasks.');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-circle"></i> Submit Order
                        </button>
                    </form>
                }
                else
                {
                    <button type="button" class="btn btn-success" disabled title="Add items before submitting">
                        <i class="bi bi-check-circle"></i> Submit Order
                    </button>
                }

                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline"
                      onsubmit="return confirm('Are you sure you want to delete this Sales Order?');">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                </form>
            }

            @if (Model.Status == WMS.DAL.SalesOrderStatus.Submitted ||
            Model.Status == WMS.DAL.SalesOrderStatus.Processing ||
            Model.Status == WMS.DAL.SalesOrderStatus.Picked ||
            Model.Status == WMS.DAL.SalesOrderStatus.PartiallyPicked)
            {
                <a asp-controller="Picking" asp-action="Details" asp-route-salesOrderId="@Model.Id" class="btn btn-info">
                    <i class="bi bi-list-check"></i> View Picking Tasks
                </a>
            }

            @if (Model.Status == WMS.DAL.SalesOrderStatus.Picked || Model.Status == WMS.DAL.SalesOrderStatus.PartiallyPicked)
            {
                <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#shipModal">
                    <i class="bi bi-truck"></i> Ship Order
                </button>
            }

            @if (Model.Status != WMS.DAL.SalesOrderStatus.Shipped && Model.Status != WMS.DAL.SalesOrderStatus.Cancelled)
            {
                <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#cancelModal">
                    <i class="bi bi-x-circle"></i> Cancel Order
                </button>
            }
        </div>
    </div>
</div>

<!-- Add Item Modal -->
<div class="modal fade" id="addItemModal" tabindex="-1" aria-labelledby="addItemModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="AddItem" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="salesOrderId" value="@Model.Id" />
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title" id="addItemModalLabel">
                        <i class="bi bi-plus-circle"></i> Add Item to Order
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Product <span class="text-danger">*</span></label>
                        <select name="productId" class="form-select" asp-items="ViewBag.Products" required>
                            <option value="">-- Select Product --</option>
                        </select>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Quantity <span class="text-danger">*</span></label>
                            <input type="number" name="qtyOrdered" class="form-control" min="1" value="1" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Unit Price <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input type="number" name="unitPrice" class="form-control" step="0.01" min="0.01" value="0.00" required>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-plus-lg"></i> Add Item
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Ship Order Modal -->
<div class="modal fade" id="shipModal" tabindex="-1" aria-labelledby="shipModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="ShipOrder" asp-route-id="@Model.Id" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title" id="shipModalLabel">
                        <i class="bi bi-truck"></i> Ship Order #@Model.SO_Number
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <h6>Items Ready to Ship:</h6>
                    <ul class="list-unstyled">
                        @if (Model.Items != null)
                        {
                            @foreach (var item in Model.Items)
                            {
                                <li class="mb-2">
                                    <i class="bi bi-box-seam"></i>
                                    <strong>@item.ProductName:</strong> @item.QtyPicked units
                                    @if (item.QtyPicked == item.QtyOrdered)
                                    {
                                        <i class="bi bi-check-circle text-success"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-exclamation-triangle text-warning"></i>
                                        <small class="text-muted">(@item.QtyOrdered ordered)</small>
                                    }
                                </li>
                            }
                        }
                    </ul>

                    <hr />

                    <div class="mb-3">
                        <label class="form-label">Carrier <span class="text-danger">*</span></label>
                        <input type="text" name="carrier" class="form-control" list="carrierOptions" placeholder="Enter Carrier Name" required>
                        <datalist id="carrierOptions">
                            <option value="FedEx"></option>
                            <option value="UPS"></option>
                            <option value="USPS"></option>
                            <option value="DHL"></option>
                        </datalist>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Tracking Number <span class="text-danger">*</span></label>
                        <input type="text" name="trackingNumber" class="form-control"
                               placeholder="Enter tracking number" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Notes (Optional)</label>
                        <textarea name="notes" class="form-control" rows="2"
                                  placeholder="Any special shipping instructions..."></textarea>
                    </div>

                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle"></i>
                        <strong>Warning:</strong> This action will reduce inventory and mark the order as shipped. This cannot be undone.
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-truck"></i> Confirm Shipment
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Cancel Order Modal -->
<div class="modal fade" id="cancelModal" tabindex="-1" aria-labelledby="cancelModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="CancelOrder" asp-route-id="@Model.Id" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="cancelModalLabel">
                        <i class="bi bi-x-circle"></i> Cancel Order #@Model.SO_Number
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-danger">
                        <i class="bi bi-exclamation-triangle"></i>
                        <strong>Warning:</strong> Cancelling this order will release all inventory reservations and cancel any pending picking tasks.
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Cancellation Reason <span class="text-danger">*</span></label>
                        <textarea name="reason" class="form-control" rows="3"
                                  placeholder="Please provide a reason for cancellation (minimum 10 characters)..."
                                  required minlength="10"></textarea>
                        <div class="form-text">Minimum 10 characters required.</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-x-circle"></i> Confirm Cancellation
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
