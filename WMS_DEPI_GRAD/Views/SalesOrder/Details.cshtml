@model WMS_DEPI_GRAD.ViewModels.SalesOrderViewModel

@{
    ViewData["Title"] = "Sales Order Details";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-file-text"></i> Sales Order Details</h2>
        <div>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Order Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">SO Number:</dt>
                        <dd class="col-sm-8"><strong>@Model.SO_Number</strong></dd>

                        <dt class="col-sm-4">Customer:</dt>
                        <dd class="col-sm-8">@Model.CustomerName</dd>

                        <dt class="col-sm-4">Warehouse:</dt>
                        <dd class="col-sm-8">@Model.WarehouseName</dd>

                        <dt class="col-sm-4">Order Date:</dt>
                        <dd class="col-sm-8">@Model.OrderDate.ToString("yyyy-MM-dd")</dd>

                        <dt class="col-sm-4">Status:</dt>
                        <dd class="col-sm-8">
                            @if (Model.Status == WMS.DAL.SalesOrderStatus.Draft)
                            {
                                <span class="badge bg-secondary">Draft</span>
                            }
                            else if (Model.Status == WMS.DAL.SalesOrderStatus.Submitted)
                            {
                                <span class="badge bg-info">Submitted</span>
                            }
                            else if (Model.Status == WMS.DAL.SalesOrderStatus.Picked)
                            {
                                <span class="badge bg-warning">Picked</span>
                            }
                            else if (Model.Status == WMS.DAL.SalesOrderStatus.Shipped)
                            {
                                <span class="badge bg-success">Shipped</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">Audit Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Created On:</dt>
                        <dd class="col-sm-8">@Model.CreatedOn.ToString("yyyy-MM-dd HH:mm")</dd>

                        <dt class="col-sm-4">Created By:</dt>
                        <dd class="col-sm-8">@Model.CreatedBy</dd>

                        @if (Model.LastModifiedOn.HasValue)
                        {
                            <dt class="col-sm-4">Modified On:</dt>
                            <dd class="col-sm-8">@Model.LastModifiedOn.Value.ToString("yyyy-MM-dd HH:mm")</dd>

                            <dt class="col-sm-4">Modified By:</dt>
                            <dd class="col-sm-8">@Model.LastModifiedBy</dd>
                        }
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0">Order Items</h5>
        </div>
        <div class="card-body">
            @if (Model.Items.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Product Name</th>
                                <th>SKU</th>
                                <th>Qty Ordered</th>
                                <th>Qty Picked</th>
                                <th>Unit Price</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>@item.ProductName</td>
                                    <td>@item.SKU</td>
                                    <td>@item.QtyOrdered</td>
                                    <td>@item.QtyPicked</td>
                                    <td>@item.UnitPrice.ToString("C")</td>
                                    <td>@item.LineTotal.ToString("C")</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr class="table-active">
                                <td colspan="5" class="text-end"><strong>Grand Total:</strong></td>
                                <td><strong>@Model.Items.Sum(i => i.LineTotal).ToString("C")</strong></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle"></i> No items added yet.
                </div>
            }
        </div>
    </div>

    <div class="mt-4">
        @if (Model.Status == WMS.DAL.SalesOrderStatus.Draft)
        {
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Edit
            </a>

            @if (Model.Items.Any())
            {
                <form asp-action="Submit" asp-route-id="@Model.Id" method="post" class="d-inline" 
                      onsubmit="return confirm('Are you sure you want to submit this Sales Order? This will allocate picking tasks.');">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> Submit Order
                    </button>
                </form>
            }

            <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline" 
                  onsubmit="return confirm('Are you sure you want to delete this Sales Order?');">
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Delete
                </button>
            </form>
        }

        @if (Model.Status == WMS.DAL.SalesOrderStatus.Submitted || Model.Status == WMS.DAL.SalesOrderStatus.Picked)
        {
            <a asp-controller="Picking" asp-action="Details" asp-route-salesOrderId="@Model.Id" class="btn btn-info">
                <i class="bi bi-list-check"></i> View Picking Tasks
            </a>
        }

        @if (Model.Status == WMS.DAL.SalesOrderStatus.Picked)
        {
            <a asp-controller="Shipping" asp-action="Confirm" asp-route-id="@Model.Id" class="btn btn-success">
                <i class="bi bi-truck"></i> Ship Order
            </a>
        }
    </div>
</div>
