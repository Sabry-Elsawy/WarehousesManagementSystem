@model WMS_DEPI_GRAD.Models.TransferOrderModel

@{
    ViewData["Title"] = "Transfer Order Details";
}

<div class="container py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Transfer Orders</a></li>
            <li class="breadcrumb-item active" aria-current="page">Details</li>
        </ol>
    </nav>

    <div class="card shadow-sm">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Transfer Order Details</h5>
            <span class="badge @(Model.Status == "completed" ? "bg-success" : Model.Status == "approved" ? "bg-primary" : Model.Status == "pending" ? "bg-warning text-dark" : "bg-secondary")">
                @Model.Status.ToUpper()
            </span>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-6">
                    <h6 class="text-muted text-uppercase small">Transfer Information</h6>
                    <dl class="row">
                        <dt class="col-sm-4">Transfer ID</dt>
                        <dd class="col-sm-8 font-monospace">@Model.TransferId</dd>

                        <dt class="col-sm-4">Created Date</dt>
                        <dd class="col-sm-8">@Model.CreatedDate.ToString("f")</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <h6 class="text-muted text-uppercase small">Product Details</h6>
                    <dl class="row">
                        <dt class="col-sm-4">Product</dt>
                        <dd class="col-sm-8">
                            <span class="fw-bold">@ViewBag.ProductName</span>
                            <br />
                            <small class="text-muted font-monospace">@Model.SKU</small>
                        </dd>

                        <dt class="col-sm-4">Quantity</dt>
                        <dd class="col-sm-8">@Model.Quantity</dd>
                    </dl>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="p-3 bg-light rounded border">
                        <h6 class="text-muted mb-2">From</h6>
                        <p class="mb-0 fw-bold">@Model.FromLocation</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="p-3 bg-light rounded border">
                        <h6 class="text-muted mb-2">To</h6>
                        <p class="mb-0 fw-bold">@Model.ToLocation</p>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fa-solid fa-arrow-left me-1"></i> Back to List
                </a>
                
                @if (Model.Status == "pending")
                {
                    <form asp-action="Approve" asp-route-id="@Model.Id" method="post">
                        <button type="submit" class="btn btn-success">
                            <i class="fa-solid fa-check me-1"></i> Approve Transfer
                        </button>
                    </form>
                }
            </div>
        </div>
    </div>
</div>
