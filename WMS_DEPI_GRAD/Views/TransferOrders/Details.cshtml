@model WMS_DEPI_GRAD.ViewModels.TransferOrderDetailsViewModel

@{
    ViewData["Title"] = "Transfer Order Details";
}

<div class="container">
    <h2>Transfer Order Details</h2>
    <hr />

    <div class="card mb-4">
        <div class="card-header">
            Order Information
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">ID</dt>
                <dd class="col-sm-9">@Model.Id</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-@(Model.Status == "Pending" ? "warning" : "success")">
                        @Model.Status
                    </span>
                </dd>

                <dt class="col-sm-3">Created On</dt>
                <dd class="col-sm-9">@Model.CreatedOn.ToString("g")</dd>

                <dt class="col-sm-3">Source Warehouse</dt>
                <dd class="col-sm-9">@Model.SourceWarehouse</dd>

                <dt class="col-sm-3">Destination Warehouse</dt>
                <dd class="col-sm-9">@Model.DestinationWarehouse</dd>
            </dl>
        </div>
    </div>

    <h4>Items</h4>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Code</th>
                    <th>Quantity</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.ProductName</td>
                        <td>@item.Code</td>
                        <td>@item.Quantity</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
