@model List<WMS_DEPI_GRAD.Models.TransferOrderModel>

@{
    ViewData["Title"] = "Transfer Orders";
}

<div class="container py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active">Transfer Orders</li>
        </ol>
    </nav>

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 fw-bold text-dark">Transfer Orders</h1>
            <p class="text-muted">Manage internal transfers</p>
        </div>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createTransferModal">
            <i class="fa-solid fa-plus me-1"></i> Create Transfer
        </button>
    </div>

    <!-- Stats Card -->
    <div class="row mb-4">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-muted mb-1">Pending Transfers</p>
                        <h3 class="fw-bold">@Model.Count(t => t.Status == "pending")</h3>
                    </div>
                    <div class="bg-warning bg-opacity-25 rounded-circle p-3 text-warning d-flex align-items-center justify-content-center">
                        <i class="fa-solid fa-right-left fs-3"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Table -->
    <div class="card shadow-sm">
        <div class="card-header">
            <h5 class="mb-0">All Transfer Orders</h5>
        </div>
        <div class="card-body">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th>Transfer ID</th>
                        <th>SKU</th>
                        <th>Quantity</th>
                        <th>From Warehouse</th>
                        <th>To Warehouse</th>
                        <th>Status</th>
                        <th>Created Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var t in Model)
                    {
                        <tr>
                            <td class="font-monospace fw-medium">@t.Id</td>
                            <td class="font-monospace text-muted">@t.SKU</td>
                            <td><strong>@t.Quantity</strong></td>
                            <td class="text-muted">@t.FromLocation</td>
                            <td class="text-muted">@t.ToLocation</td>
                            <td>
                                @if (t.Status == "completed")
                                {
                                    <span class="badge bg-success bg-opacity-25 text-success border border-success">Completed</span>
                                }
                                else if (t.Status == "in-progress")
                                {
                                    <span class="badge bg-info bg-opacity-25 text-info border border-info">In Progress</span>
                                }
                                else if (t.Status == "pending")
                                {
                                    <span class="badge bg-warning bg-opacity-25 text-warning border border-warning">Pending</span>
                                }
                                else if (t.Status == "approved")
                                {
                                    <span class="badge bg-primary bg-opacity-25 text-primary border border-primary">Approved</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary text-dark">Unknown</span>
                                }
                            </td>
                            <td>@t.CreatedDate.ToString("yyyy-MM-dd")</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@t.Id" class="btn btn-sm btn-outline-primary me-1" title="View Details">
                                    <i class="fa-solid fa-eye"></i>
                                </a>
                                @if (t.Status == "pending")
                                {
                                    <form asp-action="Approve" asp-route-id="@t.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-outline-success" title="Approve Transfer">
                                            <i class="fa-solid fa-check"></i> Approve
                                        </button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Create Transfer Modal -->
<div class="modal fade" id="createTransferModal" tabindex="-1" aria-labelledby="createTransferModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <form asp-action="Create" method="post" class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createTransferModalLabel">Create Transfer Order</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label">From Warehouse</label>
                    <select name="fromWarehouseId" class="form-select" required>
                        <option value="">Select Warehouse...</option>
                        @if (ViewBag.Warehouses != null)
                        {
                            foreach (var w in ViewBag.Warehouses)
                            {
                                <option value="@w.Id">@w.Name</option>
                            }
                        }
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">To Warehouse</label>
                    <select name="toWarehouseId" class="form-select" required>
                        <option value="">Select Warehouse...</option>
                        @if (ViewBag.Warehouses != null)
                        {
                            foreach (var w in ViewBag.Warehouses)
                            {
                                <option value="@w.Id">@w.Name</option>
                            }
                        }
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">Product</label>
                    <select name="productId" class="form-select" required>
                        <option value="">Select Product...</option>
                        @if (ViewBag.Products != null)
                        {
                            foreach (var p in ViewBag.Products)
                            {
                                <option value="@p.Id">@p.Name (@p.Code)</option>
                            }
                        }
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">Quantity</label>
                    <input name="quantity" type="number" class="form-control" min="1" required />
                </div>


            </div>

            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Create Transfer</button>
            </div>
        </form>
    </div>
</div>
