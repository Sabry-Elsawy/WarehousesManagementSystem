@model WMS.DAL.Receipt

@{
    ViewData["Title"] = "Scan Receipt Items";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-barcode"></i> Scan Receipt: @Model.ReceiptNumber</h2>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Details
        </a>
    </div>

    <div class="row">
        <div class="col-md-5">
            <div class="card mb-4 shadow">
                <div class="card-header bg-primary text-white">
                    <h5><i class="fas fa-qrcode"></i> Scan Item</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label for="productCode" class="form-label">Product Code / Barcode</label>
                        <input type="text" id="productCode" class="form-control form-control-lg" 
                               placeholder="Scan or enter SKU" autofocus />
                        <small class="form-text text-muted">Use barcode scanner or type product code</small>
                    </div>
                    <div class="mb-3">
                        <label for="qty" class="form-label">Quantity</label>
                        <input type="number" id="qty" class="form-control form-control-lg" 
                               value="1" min="1" />
                    </div>
                    <button type="button" id="btnScan" class="btn btn-success btn-lg w-100">
                        <i class="fas fa-check"></i> Scan Item
                    </button>
                    
                    <div id="scanResult" class="alert mt-3" style="display:none;"></div>
                </div>
            </div>

            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h5><i class="fas fa-info-circle"></i> Quick Stats</h5>
                </div>
                <div class="card-body">
                    @{
                        var totalItems = Model.ReceiptItems.Count;
                        var processedItems = Model.ReceiptItems.Count(i => i.QtyReceived > 0);
                        var itemsWithDiscrepancy = Model.ReceiptItems.Count(i => i.DiscrepancyType != WMS.DAL.DiscrepancyType.None);
                        var progressPercent = totalItems > 0 ? (processedItems * 100 / totalItems) : 0;
                    }
                    <table class="table table-borderless mb-0">
                        <tr>
                            <th>Progress:</th>
                            <td>
                                <div class="progress">
                                    <div class="progress-bar @(progressPercent == 100 ? "bg-success" : "bg-primary")" 
                                         role="progressbar" 
                                         style="width: @progressPercent%">
                                        @processedItems / @totalItems
                                    </div>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <th>Discrepancies:</th>
                            <td>
                                <span class="badge @(itemsWithDiscrepancy > 0 ? "bg-danger" : "bg-success")">
                                    @itemsWithDiscrepancy
                                </span>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-7">
            <div class="card shadow">
                <div class="card-header bg-secondary text-white">
                    <h5><i class="fas fa-list"></i> Expected Items</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-sm table-hover">
                            <thead>
                                <tr>
                                    <th>SKU</th>
                                    <th>Product</th>
                                    <th>Expected</th>
                                    <th>Received</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody id="itemsTable">
                                @foreach (var item in Model.ReceiptItems)
                                {
                                    <tr data-sku="@item.SKU" class="@(item.DiscrepancyType != WMS.DAL.DiscrepancyType.None ? "table-danger" : "")">
                                        <td><strong>@item.SKU</strong></td>
                                        <td>@item.Product?.Name</td>
                                        <td>@item.QtyExpected</td>
                                        <td class="qty-received">
                                            <strong>@item.QtyReceived</strong>
                                        </td>
                                        <td>
                                            @if (item.DiscrepancyType == WMS.DAL.DiscrepancyType.None)
                                            {
                                                if (item.QtyReceived >= item.QtyExpected && item.QtyReceived > 0)
                                                {
                                                    <span class="badge bg-success">Complete</span>
                                                }
                                                else if (item.QtyReceived > 0)
                                                {
                                                    <span class="badge bg-info">Partial</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Pending</span>
                                                }
                                            }
                                            else if (item.DiscrepancyType == WMS.DAL.DiscrepancyType.Shortage)
                                            {
                                                <span class="badge bg-warning text-dark">Shortage</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Overage</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="mt-3 d-flex justify-content-end">
                <form asp-action="Close" asp-route-id="@Model.Id" method="post" class="d-inline">
                    <button type="submit" class="btn btn-secondary btn-lg" 
                            onclick="return confirm('Close this receipt? All items should be processed.')">
                        <i class="fas fa-check-circle"></i> Close Receipt
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Focus on product code input
            $('#productCode').focus();

            // Scan button click
            $('#btnScan').click(function() {
                scanItem();
            });

            // Enter key to scan
            $('#productCode').keypress(function(e) {
                if (e.which == 13) { // Enter key
                    e.preventDefault();
                    scanItem();
                }
            });

            function scanItem() {
                const receiptId = @Model.Id;
                const productCode = $('#productCode').val().trim();
                const qty = parseInt($('#qty').val());

                if (!productCode) {
                    showResult('Please enter a product code', 'danger');
                    return;
                }

                if (qty < 1) {
                    showResult('Quantity must be at least 1', 'danger');
                    return;
                }

                // Disable button during scan
                $('#btnScan').prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i> Scanning...');

                $.ajax({
                    url: '/api/receipt/scan',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({
                        receiptId: receiptId,
                        productCodeOrBarcode: productCode,
                        qty: qty
                    }),
                    success: function(response) {
                        if (response.success) {
                            showResult(`✓ ${response.message} (${response.product}: ${response.qty})`, 'success');
                            $('#productCode').val('').focus();
                            $('#qty').val(1);
                            
                            // Reload page to update quantities
                            setTimeout(function() {
                                location.reload();
                            }, 1000);
                        } else {
                            showResult('✗ ' + response.message, 'danger');
                        }
                    },
                    error: function(xhr) {
                        showResult('✗ Error scanning item', 'danger');
                    },
                    complete: function() {
                        $('#btnScan').prop('disabled', false).html('<i class="fas fa-check"></i> Scan Item');
                    }
                });
            }

            function showResult(message, type) {
                $('#scanResult')
                    .removeClass('alert-success alert-danger alert-warning')
                    .addClass('alert-' + type)
                    .html(message)
                    .show();
                
                // Auto-hide success messages
                if (type === 'success') {
                    setTimeout(function() {
                        $('#scanResult').fadeOut();
                    }, 2000);
                }
            }
        });
    </script>
}
