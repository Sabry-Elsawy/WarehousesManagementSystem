@model WMS.DAL.Receipt

@{
    ViewData["Title"] = "Receipt Details";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-box-open"></i> Receipt: @Model.ReceiptNumber</h2>
        <div>
            @if (Model.Status == WMS.DAL.ReceiptStatus.Open)
            {
                <a asp-action="Scan" asp-route-id="@Model.Id" class="btn btn-success">
                    <i class="fas fa-barcode"></i> Scan Items
                </a>
                <form asp-action="Close" asp-route-id="@Model.Id" method="post" class="d-inline">
                    <button type="submit" class="btn btn-secondary" 
                            onclick="return confirm('Are you sure you want to close this receipt? All items should be processed.')">
                        <i class="fas fa-lock"></i> Close Receipt
                    </button>
                </form>
            }
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5>Receipt Information</h5>
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tr>
                            <th>Receipt Number:</th>
                            <td>@Model.ReceiptNumber</td>
                        </tr>
                        <tr>
                            <th>ASN:</th>
                            <td>
                                <a asp-controller="ASN" asp-action="Details" asp-route-id="@Model.AdvancedShippingNoticeId">
                                    @Model.AdvancedShippingNotice?.ASN_Number
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <th>Warehouse:</th>
                            <td>@Model.Warehouse?.Name</td>
                        </tr>
                        <tr>
                            <th>Received Date:</th>
                            <td>@Model.ReceivedDate.ToShortDateString()</td>
                        </tr>
                        <tr>
                            <th>Status:</th>
                            <td>
                                @if (Model.Status == WMS.DAL.ReceiptStatus.Open)
                                {
                                    <span class="badge bg-warning text-dark">Open</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Closed</span>
                                }
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-info text-white">
                    <h5>Summary</h5>
                </div>
                <div class="card-body">
                    @{
                        var totalItems = Model.ReceiptItems.Count;
                        var processedItems =Model.ReceiptItems.Count(i => i.QtyReceived > 0);
                        var itemsWithDiscrepancy = Model.ReceiptItems.Count(i => i.DiscrepancyType != WMS.DAL.DiscrepancyType.None);
                    }
                    <table class="table table-borderless">
                        <tr>
                            <th>Total Items:</th>
                            <td>@totalItems</td>
                        </tr>
                        <tr>
                            <th>Processed Items:</th>
                            <td>
                                @processedItems / @totalItems
                                @if (processedItems == totalItems && totalItems > 0)
                                {
                                    <span class="badge bg-success ms-2"><i class="fas fa-check"></i> Complete</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <th>Items with Discrepancy:</th>
                            <td>
                                @itemsWithDiscrepancy
                                @if (itemsWithDiscrepancy > 0)
                                {
                                    <span class="badge bg-danger ms-2"><i class="fas fa-exclamation-triangle"></i></span>
                                }
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-secondary text-white">
            <h5>Receipt Items</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>SKU</th>
                            <th>Product</th>
                            <th>Qty Expected</th>
                            <th>Qty Received</th>
                            <th>Variance</th>
                            <th>Discrepancy</th>
                            <th>Notes</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ReceiptItems)
                        {
                            var variance = item.QtyReceived - item.QtyExpected;
                            
                            <tr class="@(item.DiscrepancyType != WMS.DAL.DiscrepancyType.None ? "table-danger" : "")">
                                <td>@item.SKU</td>
                                <td>@item.Product?.Name</td>
                                <td>@item.QtyExpected</td>
                                <td>
                                    <strong>@item.QtyReceived</strong>
                                    @if (item.QtyReceived >= item.QtyExpected && item.QtyReceived > 0)
                                    {
                                        <i class="fas fa-check text-success ms-2"></i>
                                    }
                                </td>
                                <td>
                                    @if (variance != 0)
                                    {
                                        <span class="@(variance > 0 ? "text-danger" : "text-warning")">
                                            @(variance > 0 ? "+" : "")@variance
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">0</span>
                                    }
                                </td>
                                <td>
                                    @if (item.DiscrepancyType == WMS.DAL.DiscrepancyType.None)
                                    {
                                        <span class="badge bg-success">None</span>
                                    }
                                    else if (item.DiscrepancyType == WMS.DAL.DiscrepancyType.Shortage)
                                    {
                                        <span class="badge bg-warning text-dark">Shortage</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Overage</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Notes))
                                    {
                                        <small>@item.Notes</small>
                                    }
                                    else if (item.DiscrepancyType != WMS.DAL.DiscrepancyType.None && Model.Status == WMS.DAL.ReceiptStatus.Open)
                                    {
                                        <button type="button" class="btn btn-sm btn-outline-primary" 
                                                data-bs-toggle="modal" 
                                                data-bs-target="#notesModal"
                                                onclick="setReceiptItemId(@item.Id)">
                                            Add Notes
                                        </button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<!-- Add Notes Modal -->
<div class="modal fade" id="notesModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Discrepancy Notes</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="notesForm">
                    <input type="hidden" id="receiptItemId" />
                    <div class="mb-3">
                        <label for="notes" class="form-label">Notes</label>
                        <textarea id="notes" class="form-control" rows="4" 
                                  placeholder="Explain the discrepancy..."></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="saveNotes()">Save Notes</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function setReceiptItemId(id) {
            $('#receiptItemId').val(id);
        }

        function saveNotes() {
            const receiptItemId = parseInt($('#receiptItemId').val());
            const notes = $('#notes').val();

            $.ajax({
                url: '@Url.Action("HandleDiscrepancy")',
                type: 'POST',
                data: {
                    receiptItemId: receiptItemId,
                    notes: notes
                },
                success: function (result) {
                    if (result.success) {
                        location.reload();
                    } else {
                        alert(result.message);
                    }
                },
                error: function () {
                    alert('Error saving notes');
                }
            });
        }
    </script>
}
