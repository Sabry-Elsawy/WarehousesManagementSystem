@model IEnumerable<WMS_DEPI_GRAD.ViewModels.ReceiptViewModel>

@{
    ViewData["Title"] = "Receipts";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-box-open"></i> Receipts</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Create New Receipt
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Receipt Number</th>
                            <th>ASN Number</th>
                            <th>Warehouse</th>
                            <th>Received Date</th>
                            <th>Status</th>
                            <th>Items</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var processedItems = item.ProcessedItems;
                            var totalItems = item.TotalItems;
                            var hasDiscrepancies = item.ItemsWithDiscrepancy > 0;
                            
                            <tr>
                                <td><strong>@item.ReceiptNumber</strong></td>
                                <td>@item.ASN_Number</td>
                                <td>@item.WarehouseName</td>
                                <td>@item.ReceivedDate.ToShortDateString()</td>
                                <td>
                                    @if (item.Status == WMS.DAL.ReceiptStatus.Open)
                                    {
                                        <span class="badge bg-warning text-dark">Open</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Closed</span>
                                    }
                                </td>
                                <td>
                                    @processedItems / @totalItems
                                    @if (hasDiscrepancies)
                                    {
                                        <span class="badge bg-danger ms-2">
                                            <i class="fas fa-exclamation-triangle"></i>
                                        </span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="View Details">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    @if (item.Status == WMS.DAL.ReceiptStatus.Open)
                                    {
                                        <a asp-action="Scan" asp-route-id="@item.Id" class="btn btn-sm btn-success" title="Scan Items">
                                            <i class="fas fa-barcode"></i>
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
