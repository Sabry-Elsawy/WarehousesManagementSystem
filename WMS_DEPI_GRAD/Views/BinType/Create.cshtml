@model WMS.DAL.Entities.BinType
@{
    ViewData["Title"] = "Create Bin Type";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-primary-orange fw-bold mb-0">
                <i class="fas fa-plus-circle me-2"></i>Create Bin Type
            </h2>
            <p class="text-muted mb-0">Add a new bin type category</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
            <i class="fas fa-arrow-left me-2"></i>Back to List
        </a>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        
                        <div class="row g-3">
                            <div class="col-12">
                                <label asp-for="Name" class="form-label fw-bold">Name <span class="text-danger">*</span></label>
                                <input asp-for="Name" class="form-control" placeholder="e.g. Standard, Cold Storage, Hazardous" required />
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-12">
                                <label asp-for="Description" class="form-label fw-bold">Description</label>
                                <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter a brief description of this bin type..."></textarea>
                                <span asp-validation-for="Description" class="text-danger small"></span>
                            </div>
                        </div>
                        
                        <div class="d-flex justify-content-end mt-4">
                            <a asp-action="Index" class="btn btn-light me-2">Cancel</a>
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="fas fa-save me-2"></i>Save Bin Type
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
